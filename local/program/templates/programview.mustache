{{# program}}
<div class="classview_topcontainer w-full pull-left">
    <div class="col-lg-12 col-md-12 col-sm-12 col-12 pull-left classview_topcontent pl-0">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 pull-left classview_topcontent_right">
            <h3>{{ name }}</h3>
            <div class="description">
                {{# isdescription}}
                    {{^ descriptionstring}}
                        <p class="text-muted">{{{ description }}}</p>
                    {{/ descriptionstring }}
                    {{# descriptionstring}}
                        <p class="text-muted">{{ descriptionstring }} ...</p>
                    {{/ descriptionstring }}
                {{/ isdescription}}
                {{^ isdescription }}
                    <p class="alert alert-info text-center">{{#str}}nocoursedesc, local_program{{/str}}</p>
                {{/ isdescription }}
            </div>
        </div>
    </div>
</div>

<div class="mt-15 w-full pull-left">
    <div class="col-lg-12 col-md-12 col-sm-12 col-12 pull-left p-0 mt-15">
        <h3 class="watnext_head pb-15">{{#str}}whats_next, local_program{{/str}}</h3>
    </div>
    <div class="course_buttons col-lg-12 col-md-12 col-sm-12 col-12 pull-left pt-15 pb-15">
        <div class="col-lg-6 col-md-6 col-sm-9 col-9 pull-left">{{#str}}do_u_want_to_create_level, local_program{{/str}}</div>
        <div class="col-lg-6 col-md-6 col-sm-3 col-3 pull-left pr-0">
            <a href="javascript:void(0)" onclick="(function(e){ require('local_program/ajaxforms').init({contextid:1, component:'local_program', callback:'program_managelevel_form', form_status:0, plugintype: 'local', pluginname: 'program_addlevel', id: 0, programid:{{programid}}  }) })(event)"><button class="btn btn-primary">{{#str}}go_to, local_program{{/str}}</button></a>
        </div>
    </div>
    <div class="course_buttons col-lg-12 col-md-12 col-sm-12 col-12 pull-left pt-15 pb-15">
         <div class="col-lg-6 col-md-6 col-sm-9 col-9 pull-left">{{#str}}do_u_want_to_add_users, local_program{{/str}}</div>
         <div class="col-lg-6 col-md-6 col-sm-3 col-3 pull-left pr-0">
            <a href="{{cfg.wwwroot}}/local/program/enrollusers.php?bcid={{programid}}" ><button class="btn btn-primary">{{#str}}go_to, local_program{{/str}}</button></a>
        </div>
    </div>
	{{#linkpath}}
	 <div class="course_buttons col-lg-12 col-md-12 col-sm-12 col-12 pull-left pt-15 pb-15">
         <div class="col-lg-6 col-md-6 col-sm-12 col-12 pull-left"></div>
         <div class="col-lg-2 col-md-2 col-sm-12 col-12 pr-0 pull-right">
            <a href='{{ linkpath }}' ><button class="btn btn-primary">{{#str}}continue{{/str}}</button></a>
        </div>
    </div>
  {{/linkpath}}
</div>
{{#js}}
    $( document ).ready(function() {
        $(".trainer-next, .trainer-prev").click(function () {
            var div = $(".trainers_scroll")[0];
            var html = $(div).html();
            $(div).remove();
            $(".topcontent_right_bottom").append("<div class=\"col-md-4 trainers_scroll\">" + html + "</div>");
        });
    });

{{/js}}
{{/ program}}