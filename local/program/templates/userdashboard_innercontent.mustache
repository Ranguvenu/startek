{{# program_view_count}}
<div class="userdashboard_content userdashboard_ctype_program d-flex flex-row flex-{{# enableflow}}no{{/enableflow}}wrap">
    {{#moduledetails}}
    <div class="col-md-4 col-sm-6 col-12 tabs_cmn_class courses_inprogress_slide ctype_program" data-index="{{index}}">
        <div class="bootcamp_container w-full p-0" >
            <div class="w-full programcontainer_top p-3">
                <div class="w-full">
                    <div class="d-flex align-items-center">
                        <div class="classesimgContainer p-0">
                            <span class="bootcampicon_container"><img src="{{ ProgramIcon }}" alt="bootcamp_img" class="bootcampicon"></span>
                        </div>
                        <div>
                            <a href="{{{ProgramUrl}}}" title="{{{ProgramFullname}}}" class="bootcamp_name"> {{{DisplayProgramFullname}}}</a>
                        </div>
                    </div>
                    <div class="w-full coursecontent">
                        <div class="desc coursedesc w-full">{{{ProgramDescription}}}</div>
                        <div class="{{#rating_element}}w-full d-flex align-items-center justify-content-between flex-row flex-wrap{{/rating_element}}">
                            <div class="pull-left">{{{rating_element}}}</div>
                            <a href="{{{ProgramUrl}}}">
                                 <button class="btn btn-primary launch_btn">{{#str}}launch, block_userdashboard{{/str}}</button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>    
    </div>
        
    {{/moduledetails}}  
