<ul class="course_extended_menu_list">
    {{# reports.0}}
    <li>
        <div class="dropdown">
            <a href="#" tabindex="0" class=" dropdown-toggle icon-no-margin" id="dropdown-1" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" aria-controls="reportswitch" title="{{# str }} program_reports,local_program {{/ str }}">            
                <i class="icon fa fa-signal" aria-hidden="true"></i>
            </a>
            <div class="dropdown-menu dropdown-menu-right menu  align-tr-br" id="reportswitch" data-rel="menu-content" aria-labelledby="action-menu-toggle-1" role="menu" data-align="tr-br">
             {{#reports}}
               <div class="dropdown-divider" role="presentation">
                 <span class="filler">&nbsp;</span></div>
                    <a href="{{config.wwwroot}}/blocks/learnerscript/viewreport.php?id={{programid}}" class="dropdown-item menu-action" role="menuitem" data-title="{{name}}" aria-label="{{name}}"target="_blank">
                     <span class="menu-action-text">{{name}}</span>
                 </a>
            {{/reports}}
           </div>     
        </div>
    </li>
    {{/ reports.0}}
    {{#location_url }}
        <li>
            <div class = "coursebackup course_extended_menu_itemcontainer" >
                <a href="{{ location_url }}" class="course_extended_menu_itemlink create_ilt" title="{{# str }} location, local_program {{/ str}}">
                    <i class="icon fa fa-map-marker" aria-hidden="true"></i>
                </a>
            </div>
        </li>
    {{/location_url }}
    {{# request_url }}
        <li>
            <div class = "coursebackup course_extended_menu_itemcontainer" >
                <a href="{{ request_url }}" class="course_extended_menu_itemlink reqyest" title="{{# str }} request, local_program {{/ str}}">
                    <i class="icon fa fa-share-square" aria-hidden="true"></i>
                </a>
            </div>
        </li>
    {{/ request_url }}
    {{# creataprogram }}
        <li>
            <div class = "coursebackup course_extended_menu_itemcontainer" >
                <a class="course_extended_menu_itemlink create_ilt" title="{{# str }} create_program, local_program {{/ str }}" onclick="(function(e){ require('local_program/ajaxforms').init({contextid:{{contextid}}, component:'local_program', callback:'program_form', form_status:0, plugintype: '{{plugintype}}', pluginname: '{{plugin_name}}', id:0, title: 'createprogram' }) })(event)">
                    <span class="createicon">
                        <span class="icon fa fa-graduation-cap"><i class="fa fa-plus createiconchild" aria-hidden="true"></i></span>

                    </span>
                </a>
            </div>
        </li>
    {{/ creataprogram }}
</ul>
<div id="status_tabs">
    <div id="programcontent" >
            {{# programslist }} {{{ programslist }}} {{/ programslist }}
    </div>
</div>
