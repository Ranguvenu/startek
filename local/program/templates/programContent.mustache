                <div class="courseedit course_extended_menu_itemcontainer">
                    <a title="{{# str}} assignusers, local_program {{/ str}}" class="course_extended_menu_itemlink" href="{{ assignusersurl }}"><i class="fa fa-user-plus fa-fw" aria-hidden="true" title ="{{# str}} assignusers, local_program {{/ str}}"></i></a>
                </div>
             </li>
            <li>
                <div class="courseedit course_extended_menu_itemcontainer">
                    <a title="{{# str}} programusers, local_program {{/ str}}" class="course_extended_menu_itemlink" href="{{ cfg.wwwroot }}/local/program/users.php?bcid={{programid}}"><i class="fa fa-user" aria-hidden="true"></i></a>
