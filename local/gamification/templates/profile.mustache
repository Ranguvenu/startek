<div class="profile-content">
    <span class="profile-header">
        <h3 class="header-text">{{profile_header}}</h3>
    </span>
    <div class="fake-block card-text content">
        <div id="userdatadisplay">
            
            <div class="my_rank_trophy_container">
                <span class="my_rank_trophy">
                    <i class="fa fa-trophy"></i>
                    <span class="rankvaluedisplay">{{{ user_rank }}}</span>
                </span>
            </div>

            <div class="block_gmprofile_userdetails">
                <div id="userpicdisplay">
                    <span class="userimage">{{{user_image}}}</span>
                </div>        
                <div id="usernamedisplay">{{user_name}}</div>
                <div id="useremaildisplay">{{user_email}}</div>
            </div>

        </div>

        <div id="userleveldisplay">
            <div class="div1" id="numericdisplay">
                <!--<div class="c100 p{{ user_percentage }} small blue">
                    <span>{{ user_percentage }}</span>
                    <div class="slice">
                        <div class="bar"></div>
                        <div class="fill"></div>
                    </div>
                </div>-->
                <span id="scoredisplay">{{#str}}points, local_gamification{{/str}}
                    <b><span class="numericcontent">{{user_points}}</span>
                    </b></span><span id="badgenamedisplay">{{#str}}badges, local_gamification {{/str}}
                    <b><span class="numericcontent">{{user_badges}}</span></b>
                </span>
            </div>
        </div>

        <a id="downloadcertificate" target="blank" href={{ download_url }}>
            {{{ download_img }}}
                {{#str}}download, local_gamification {{/str}}
        </a>

    </div>
</div>
