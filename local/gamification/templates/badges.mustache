<div class="badges-content">
    <span class="badges-header">
        <h3 class="header-text">{{badges_header}}</h3>
    </span>
    <div class="fake-block card-text content">
        
        <div id="badges">
            {{# badges_information }}
            <span class="badgedisplay">   
                <span class="badgeimage-container">
                    <div class = mytooltip>
                        <div class = mytooltiptext>
                            {{{ tooltip_content }}}
                        </div>
                    </div>
                    <img class="badgeimage" src={{ imageurl }} height={{ height }} width={{width}}>
                </span>
                <span class="eventname-container" title="{{eventfullname}}">{{ eventname }}</span>
            {{#points}}
                <span class="badgepoints"><br/>{{ points }} </span>
            {{/points}} 
            </span>
                
            {{/ badges_information }}
            <a id="viewmorebadges" target="blank" href={{viewmore_url}}>{{#str}}view_available_badges, local_gamification{{/str}}</a>
        </div>
    </div>
</div>