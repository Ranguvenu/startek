<div class="col-md-12 col-sm-12 col-12 pull-left dept_content" data-element = {{deptid}}>
        <input type="hidden" name="deptid" id ="deptid" value = "{{deptid}}">
        <span class="sideline"></span>
            <div class="col-md-12 col-sm-12 col-12 pull-left deptimg_container">
                <div class="dept_topcontent">
                    <span class="connent_line"></span>
                    <div class="col-md-11 col-sm-9 col-9 pull-left dept_topleft p-0">
                        <div class="pull-left">
                            <h4>{{ departmentfullname }}</h4>

                            <div class="department_action_btns">
                                <div class="row">
                                    <div class="col-12">

                                        <!-- <a class="rolescostcenterpopup" href="javascript:void(0)" data-costcenterid="{{deptid}}" data-hierarchyid="{{hierarchyid}}"   data-costcentername="{{departmentfullname}}" data-action="popupmodal{{deptid}}"  data-value={{role_count}}><button class="btn btn-primary btn-sm mr-1 my-1">{{# str}}assignroleusers,local_assignroles{{/ str}}</button></a> -->
                                        <!-- {{# assignroles}}
                                        <a href='javascript:void(0)' data-action='createcostcenterassignrolemodal' data-value='0' onclick ="(function(e){ require('local_assignroles/newcostcenterassignrole').init({selector:'createcostcenterassignrolemodal', contextid:1, costcenterid:{{deptid}},costcentername:'{{departmentfullname}}', formtype:'{{formtype}}',hierarchyid:{{hierarchyid}}}) })(event)"><button class="btn btn-danger btn-sm mr-1 my-1">{{# str}}assignrole,local_assignroles{{/ str}}</button></a>
                                        {{/ assignroles}} -->
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{# enablesubdepartment_link}}
                        <span class="pull-right subdepartment_link">
                            <label>{{#str}}open_subdepartment, local_costcenter{{/str}} : </label>
                            <a href="{{subdept_count_link}}" class="sub_dept_count">{{subdept}}</a>
                        </span>
                        {{/ enablesubdepartment_link}}

                        {{# enablesubsubdepartment_link}}
                        <span class="pull-right subdepartment_link">
                            <label>{{#str}}open_level4department, local_costcenter{{/str}} : </label>
                            <a href="{{subdept_count_link}}" class="sub_dept_count">{{subdept}}</a>
                        </span>
                        {{/ enablesubsubdepartment_link}}

                        <!-- {{# enablesubsubsubdepartment_link}}
                        <span class="pull-right subdepartment_link">
                            <label>{{#str}}subsubsubdepartment, local_costcenter{{/str}} : </label>
                            <a href="{{subdept_count_link}}" class="sub_dept_count">{{subdept}}</a>
                        </span>
                        {{/ enablesubsubsubdepartment_link}} -->
                    </div>

                    <div class="col-md-1 col-sm-3 col-3 pull-right dept_topright p-0">
                        <div class="dropdown action_menu_dropdown">
                            <span  data-toggle="dropdown" class="px-2" aria-expanded="false">
                                <i class="fa fa-ellipsis-h text-white"></i>
                            </span>
                            <div class="dropdown-menu dropdown-menu-right shadow-sm">
                            {{# deptdelete}}
                            <a class="dropdown-item text-dark" href="javascript:void(0)" title ="{{# str}} delete {{/str}}"  onclick = "(function(e){ require('local_costcenter/costcenterdatatables').costcenterDelete({action:'deletecostcenter', id: {{{ deptid }}} ,confirm: {{{deptstatus}}} ,actionstatus:'Confirmation', actionstatusmsg:'{{{ deptdel_confirmationmsg }}}' }) })(event)"><i class="fa fa-trash fa-fw" aria-hidden="true" aria-label="Delete"></i>Delete</a>
                            {{/ deptdelete}}

                            {{# deptedit}}
                            <a class="dropdown-item text-dark" href="javascript:void(0)" title="{{# str}} edit {{/str}}" onclick="(function(e){ require('local_costcenter/newcostcenter').init({selector:'createcostcentermodal', contextid:1, id:{{ deptid }}, formtype:'{{formtype}}', headstring:'{{headstring}}' }) })(event)"><i class="fa fa-pencil fa-fw"></i>Edit</a>
                            {{/ deptedit}}

                            </div>
                        </div>
                    </div>
                     <div class="col-md-12">
                        <div class="department_action_btns">
                            {{# assignroles}}
                            <a class="rolescostcenterpopup"  href="javascript:void(0)" data-costcenterid="{{deptid}}" data-hierarchyid="{{hierarchyid}}" data-costcentername="{{departmentfullname}}" data-action="popupmodal{{deptid}}"  data-value={{role_count}} ><button class="btn btn-primary btn-sm mr-1 my-1 float-right">{{# str}}assignroleusers,local_assignroles{{/ str}}</button></a>
                            <a href='javascript:void(0)'  data-action='createcostcenterassignrolemodal' data-value='0' onclick ="(function(e){ require('local_assignroles/newcostcenterassignrole').init({selector:'createcostcenterassignrolemodal', contextid:1, costcenterid:{{deptid}},costcentername:'{{departmentfullname}}', formtype:'{{formtype}}',hierarchyid:{{hierarchyid}}}) })(event)"><button class="btn btn-danger btn-sm mr-1 my-1 float-right">{{# str}}assignrole,local_assignroles{{/ str}}</button></a>
                            {{/ assignroles}}

                            <!-- {{^ showsubdept_content}}
                                 <a href="{{config.wwwroot}}/my/dashboard.php?orgid={{recordid}}"><button class="btn btn-primary btn-sm mr-1 my-1">{{# str}}addblocks,local_costcenter{{/ str}}</button></a>
                            {{/ showsubdept_content}} -->
                        </div>
                    </div>
                </div>
            </div>
            <div id = "dept_inner_content_{{deptid}}">
            </div>
        </div>
