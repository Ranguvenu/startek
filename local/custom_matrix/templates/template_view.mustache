{{#response}}
    {{#viewtypeCard}}
        <table class="generaltable dataTable no-footer" id="skill_repository" role="grid" aria-describedby="skill_repository">
            <thead>
                <tr role="row">
                    <th class="header text-left" tabindex="0">
                            {{# str}} templatename, local_custom_matrix{{/ str}} 
                    </th>
                    
                     <th class="header text-left" tabindex="0">                     
                        {{# str}} organization, local_costcenter{{/ str}}                        
                    </th> 

                    <th class="header text-left" tabindex="0">                     
                        {{# str}} financial_year, local_custom_matrix{{/ str}}                        
                    </th> 
                    <th class="header text-left" tabindex="0">                    
                        {{# str}} templatestatus, local_custom_matrix{{/ str}}                        
                    </th> 
                    <th class="header text-left" tabindex="0">                    
                        {{# str}} viewperformance, local_custom_matrix{{/ str}}                        
                    </th>  
                    <th class="header text-center" tabindex="0">{{# str}} action, local_custom_matrix{{/ str}}</th>
                </tr>
            </thead>
            <tbody>
                {{#records}}
                    <tr>
                        <td class="text-left" >{{template_name}}</td>
                        <td class="text-left" >{{orgname}}</td>
                        <td class="text-left" >{{financialyear}}</td>
                        {{#active}}
                        <td class="text-left" style="color:#04a504"> {{# str}} activestatus, local_custom_matrix{{/ str}}</td>
                        {{/active}}
                        {{^active}}
                         <td class="text-left" style="color:#af5a47"> {{# str}} inactivestatus, local_custom_matrix{{/ str}}</td>
                        {{/active}}
                        <td class="text-left" >
                            <a href="{{globals.config.wwwroot}}/local/custom_matrix/index.php?temid={{id}}&orgid={{costcenterid}}" class="message mr-1 mt-1" title="View Performance Details">View</a>
                        </td>
                       
                        <td class="text-center">
                            <a href="javascript:void(0)" data-action="createrepositorymodal" class="iconsmall" data-value="{{id}}" onclick="(function(e){ require('local_custom_matrix/template').init({contextid:1,templateid:{{id}}  }) })(event)" style="cursor:pointer" title="Edit">
                                <i class="fa fa-pencil fa-fw" title="{{# str }} edit_title, local_custom_matrix {{/ str }}"></i>
                            </a>
                             <a href="javascript:void(0)" title="{{# str}}delete{{/ str}}" onclick="(function(e){ require('local_custom_matrix/template').deletetemplate({selector:'deletetemplate',templateid:{{id}}, name: '{{template_name}}' ,contextid:1}) })(event)">
                                <i class="fa fa-trash fa-fw" aria-hidden="true" title="{{# str }} delete_title, local_custom_matrix {{/ str }}" aria-label="Delete"></i>
                            </a>
                          
                        </td>
                    </tr>
                {{/records}}
            </tbody>
        </table>
    {{/viewtypeCard}}
{{/response}}
