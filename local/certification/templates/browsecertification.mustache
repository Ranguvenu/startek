                                <a title = "{{# str}} edit {{/str}}" href="javascript:void(0)" title = "{{# str}} edit {{/str}}" onclick="(function(e){ require('local_certification/ajaxforms').init({contextid:1, component:'local_certification', callback:'certification_form', form_status:0, plugintype: 'local', pluginname: 'certification', id: {{ certificationid }} }) })(event)"><i class="fa fa-pencil fa-fw" aria-hidden="true" aria-label=""></i>
                                </a>
                            </li>
                        {{/ edit}}
                        {{# assignusers }}
                            <li>
                                <a title ="Assign Users" href="{{ assignusersurl }}"><i class="icon fa fa-user-plus fa-fw" aria-hidden="true" aria-label=""></i></a>
                            </li>
                        {{/ assignusers }}
                    </ul>
                {{/ action}}
