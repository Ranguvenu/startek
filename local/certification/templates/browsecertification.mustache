                                <a title = "{{# str}} delete {{/ str}}" href="javascript:void(0)" alt = "{{# str}} delete {{/ str}}"title = "{{# str}} delete {{/ str}}" onclick="(function(e){ require('local_certification/certification').deleteConfirm({action:'deletecertification', id: {{ certificationid }}, certificationid: {{ certificationid }}}) })(event)"><i class="fa fa-trash" aria-hidden="true" aria-label=""></i></a>
                            </li>
                        {{/ delete}}
                        {{# edit}}
