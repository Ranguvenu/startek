{{!
    @template block_userdashboard/inner_tab

    Select an action to execute.

    Classes required for JS:
    * none

    Data attibutes required for JS:
    * none

    Context variables required for this template:
    * message - The message to explain why we ask user to select an action
    * choices - List of possible actions
    * confirm - Text for button confirms
    * cancel -  Text for button cancel

    Example context (json):
    {
        "message": "Message",
        "choices": [
            { "value": "1", "text": "One" },
            { "value": "2", "text": "Two" }
        ],
        "confirm": "Confirm",
        "cancel": "Cancel"
    }
}}



{{# certification_view_count}}
<div id="{{{subtab}}}" class="tab-pane divslider active active_subtab">
<div class="userdashboard_content d-flex flex-row flex-{{#enableflow}}no{{/enableflow}}wrap {{{course_count_view}}}">


{{#enableslider}}
     {{> block_userdashboard/userdashboard_enable_slider}}  
{{/enableslider}}    

{{#moduledetails}}
    <div class="col-sm-6 col-12 pull-left tabs_cmn_class courses_inprogress_slide ctype_certification" data-index="{{index}}">
        <div class="program_container w-full pull-left" >
            <div class="w-full pull-left pt-10 pb-10 pl-15 pr-15 programcontainer_top">
                <div class="w-full pull-left pl-15 pr-15 coursecontent">
                    <div class="classesimgContainer pull-left p-0">
                        <i class="fa fa-graduation-cap certicon"></i>
                    </div>
                    <div class="mb-10 mt-1">
                        <a href="{{{certificateUrl}}}" title="{{{certificationFullname}}}" class="cert_name"> {{{displayCertificationFullname}}}</a>
                    </div>
                    <div class="desc coursedesc pl-5">{{{certificationSummary}}}</div>
                        <div class="w-full pull-left progress-container pl-5">
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" style="width: {{certificateProgress}}%" aria-valuenow="{{{certificateProgress}}}" aria-valuemin="0" aria-valuemax="100">{{certificateProgress}}%</div>
                        </div>
                    </div>
                </div>                            
            </div>
            <div class="w-full pull-left pl-15 pr-15 footerspace"></div>
            <div class="pull-left pl-15 pr-15 mb-2 {{#rating_element}}w-full d-flex align-items-center justify-content-between flex-row flex-wrap{{/rating_element}}">
                <div class="pull-left px-1">{{{rating_element}}}</div>
                <div class="program_view_more_container">
                    <span class="program_view_more_wrapper"></span>
                    <a href="{{certificateUrl}}" class="program_view_more">{{#str}}strcertificationmore, local_certification{{/str}}</a>    
                </div>
            </div>
        </div>    
    </div>
{{/moduledetails}}
{{# viewMoreCard}}
    <div class="col-sm-6 col-12 pull-left view_more_data_card ctype_certification d-flex justify-content-center align-items-center">
        <a class="center_elemet" href="{{{view_more_url}}}">{{#str}}strcertificationviewmore, local_certification{{/str}}</a>
    </div>
{{/ viewMoreCard}}
</div>
</div>
{{/ certification_view_count}}
{{^ certification_view_count}}
    {{> block_userdashboard/userdashboard_nodata_text}}
{{/ certification_view_count}}                   

