{{# courses_view_count}}
{{# card_view}}
<div  class="userdashboard_content" >
    <div id="{{{subtab}}}" class="tab-pane divslider active active_subtab">
    <div class="userdashboard_content userdashboard_ctype_elearning row d-flex flex-row flex-{{#enableflow}}no{{/enableflow}}wrap">
        {{# moduledetails}}
            <div class="col-lg-5 col-md-6 col-sm-12 col-12 tabs_cmn_class courses_inprogress_slide {{{subtab}}} {{indexClass}} ctype_elearning d-flex" data-index="{{index}}">
                <div class="course_container d-flex w-100">
                    <div class="courseimg_container ">
                        <div alt="{{course_fullname}}" class="courseimg courseimg_bg" style="background-image:url('{{course_image_url}}')">
                            <div class="course_progress_container d-flex align-items-center">
                                <div class="progress_circular" style="background-image: conic-gradient(rgb(76, 175, 80) {{progress}}%, transparent 0%);"> </div>
                                <div class="progress_status">{{#str}}completed,block_userdashboard{{/str}} </div>
                                <div class="progress_percentage">{{progress}}%</div>
                            </div>
                        </div>

                    </div>
                    <div class=" coursecontent d-flex flex-column justify-content-between p-2">
                        <div>
                            <div class="d-flex mt-2">
                                <div class="course_name  flex-grow-1">
                                    <a href="{{course_url}}" title="{{{course_fullname}}}"> {{course_fullname}}</a>
                                </div>
                             </div>
                            {{# coursesummary}} 
                            <div class="desc coursedesc">{{{coursesummary}}}</div>
                            {{/ coursesummary}} 
                        </div>
                        <div>
                            <div class="lastopend_label my-2">{{#str}}last_opened, block_userdashboard{{/str}} : <strong>{{{lastaccessdate}}}</strong></div>
                            <a href="{{{course_url}}}" class="">
                                <button class="btn btn-primary my-2 launch_btn">{{label_name}}</button>
                            </a>
                        </div>
                        
                    </div>
                </div>    
            </div>

        {{/ moduledetails}}
        {{# viewMoreCard}}
        {{/ viewMoreCard}}
    </div>
    </div>
</div>
{{/ card_view}}
{{#list_view}} 
<table id ="userdashboard_table_content" class="generaltable">
    <thead>
        <tr>
            <th>{{#str}}coursename, local_courses{{/str}}</th>
            <th></th>
            <th>{{#str}}coursedescription, local_courses{{/str}}</th>
            <th>{{#str}}lastaccess, local_courses{{/str}}</th>
            <th>{{#str}}progress, local_courses{{/str}}</th>
        </tr>
    </thead>
    <tbody>
          {{# moduledetails}}
        <tr>
            <td> 
                <div class="course_name">
                    <a href="{{course_url}}" title="{{{course_fullname}}}"> {{course_fullname}}</a>
                </div>
            </td>
            <td>
                {{#course_completedon}}
                    <a href="{{{course_url}}}">
                        <button class="btn btn-sm launch_btn">{{#str}}completed_course, block_userdashboard{{/str}}</button>
                    </a>
                {{/course_completedon}}
                
                {{^course_completedon}}
                    <a href="{{{course_url}}}">
                        <button class="btn btn-sm launch_btn">{{label_name}}</button>
                    </a>
                {{/course_completedon}}   
                {{{ copyaction }}}
            </td>

            <td>
                {{{coursesummary}}} 
            </td>
            <td>{{{lastaccessdate}}}</td>
            <td>{{progress}}%</td>
        </tr>
        {{/ moduledetails}}
    </tbody>
</table>
{{/list_view}}
{{/ courses_view_count}}
{{^ courses_view_count}}
    {{> block_userdashboard/userdashboard_nodata_text}}
{{/ courses_view_count}}
{{#enableslider}}
    {{> block_userdashboard/userdashboard_enable_slider}}
{{/enableslider}}


    
