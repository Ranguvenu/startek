{{#response}}
    {{#viewtypeCard}}
        <div class="" id="courses_tab_content">
            <table class="w-full pull-left user_profile_tablist_content" id = profile_course_content>
                <thead class="hidden">
                    <tr>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    {{#records}}
                        <tr>
                            <td>
                                <div class="d-inline-block usercourseslist p-0 m-b-1">
                                    <div class="col-12 pull-left course-details p-0 text-left">
                                        <div class="bgusermoduleimg bgcourseimg"style="background-image: url('{{module_img_url}}');"></div>
                                        <div class="col-12 module_mxh">
                                            <h5 class="mt-2 text-truncate" title="{{ name }}"><a href="{{url}}" title="{{ name }}" style="color: inherit;"> {{ name }} </a></h5>
                                            <div class="col-12 pull-left my-1 mb-2 p-0">
                                                <div class="progress">
                                                    <div class="progress-bar" role="progressbar" style="width: {{percentage}}%;" aria-valuenow="{{percentage}}" aria-valuemin="0" aria-valuemax="100">{{percentage}}%</div>
                                                </div>
                                            </div>
                                            {{# description}}
                                                <p>{{{ description }}}</p>
                                            {{/ description}}
                                            {{^ description}}
                                                <p class="w-full pull-left alert alert-info text-center">{{#str}}nocoursedesc, local_courses{{/str}}</p>
                                            {{/ description}}
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {{/ records}}
                </tbody>
            </table>

            {{^ records }}
                <p class="w-full pull-left alert alert-info text-center">{{# str}}nocourseavailiable, local_courses {{/ str}}</p>
            {{/ records }}
        </div>

    {{/viewtypeCard}}
{{/response}}