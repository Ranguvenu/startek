{{!
    @template local_courses/parent_template

    This template renders the courses content for the courses plugin.

    Example context (json):
    {}
}}
<div class="w-full pull-left p-2  catlist_container mb-2">

    <div class="pull-left col-4 col-md-4 mt-2">
        <h6 class="font-weight-bold" title="{{category_name_title}}">
        	{{# str}} parent_category, local_courses{{/ str }}: {{category_name}}
		</h6>
	</div>
    <div class="pull-left col-4 col-md-4 mt-2">
        <h6 class="font-weight-bold" title="{{ category_code_title }}">
        	{{# str}} parent_category_code, local_courses{{/ str }}: {{category_code}}
        </h6>
	</div>
 	<div class="pull-left col-2 col-md-2 d-inline">
        <div>
            <span class="catlisticon"><i class="fa fa-folder-open"></i></span>
            <span class="catcounts mt-2">
                <span class="catnames">
                	{{# str}} categories, local_courses{{/ str }}
            	</span> 
            	{{{ subcategory_count }}}
            </span>
        </div>
    </div>

    <div class="pull-left col-2 col-md-2 d-inline">
      	<span class="catlisticons">
      		<i class="fa fa-book secbook"></i>
      	</span>
        <span class="catcounts mt-2">
        	<span class="courses_str">
        		{{# str}}courses, local_courses{{/ str }}
        	</span> 
    		{{{ courses }}}
    	</span>
	</div>
</div>