{{# courses_view_count}}
<div  class="userdashboard_content" >
    <div id="{{{subtab}}}" class="tab-pane divslider active active_subtab">
    <div class="userdashboard_content userdashboard_ctype_elearning row d-flex flex-row flex-{{#enableflow}}no{{/enableflow}}wrap">
        {{# moduledetails}}
            <div class="col-lg-4 col-sm-6 col-md-5 col-12 tabs_cmn_class courses_inprogress_slide {{{subtab}}} {{indexClass}} ctype_elearning d-flex" data-index="{{index}}">
                <div class="course_container d-flex flex-column w-100">
                    <div class="courseimg_container">
                        <div alt="{{course_fullname}}" class="courseimg courseimg_bg" style="background-image:url('{{course_image_url}}')"> </div>

                    </div>
                    <div class="coursecontent p-3">
                        <div class="course_name">
                            <a href="{{course_url}}" title="{{{course_fullname}}}"> {{course_fullname}}</a>
                        </div>
                        {{# coursesummary}} 
                            <div class="desc coursedesc mb-2">{{{coursesummary}}}</div>
                         {{/ coursesummary}} 
                        
                            <div class="w-full progress">
                                <div class="progress-bar" role="progressbar" style="width: {{progress}}%" aria-valuenow="{{{progress}}}" aria-valuemin="0" aria-valuemax="100">{{progress}}%</div>
                            </div>
                        
                        <div class="w-full mt-10 {{#rating_element}} d-flex align-items-center justify-content-between course_ratings flex-row flex-wrap{{/rating_element}}">
                            <div class="star_icons">{{{rating_element}}}
                                {{# element_tags}}
                                <a href="javascript:void(0);" class="w-full text-left pl-md-1 mt-2 show_suggested_modules" title="{{#str}}suggcourses, block_userdashboard{{/str}}" data-moduletype = "local_courses" data-show_suggestions = 0 data-tags = '{{element_tags}}' >{{#str}}sugcourses, block_userdashboard{{/str}}</a>
                                {{/ element_tags}}
                                
                            </div>
                            <div class="text-right launch_container">
                                  {{#course_completedon}}
                                <div class="mt-10">
                                    <a href="{{{course_url}}}">
                                         <button class="btn btn-primary launch_btn">{{#str}}completed_course, block_userdashboard{{/str}}</button>
                                    </a>
                                </div>
                                 {{/course_completedon}}
                                  {{^course_completedon}}
                                <div class="mt-10">
                                    <a href="{{{course_url}}}">
                                         <button class="btn btn-primary launch_btn">{{label_name}}</button>
                                    </a>
                                </div>
                                 {{/course_completedon}}
                                <div class="clearboth mt-2">{{#str}}lastaccess, local_users{{/str}}
                                    {{{lastaccessdate}}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>    
            </div>

        {{/ moduledetails}}
        {{# viewMoreCard}}
            
        {{/ viewMoreCard}}
    </div>
    </div>
</div>
{{/ courses_view_count}}
{{^ courses_view_count}}
    {{> block_userdashboard/userdashboard_nodata_text}}
{{/ courses_view_count}}
{{#enableslider}}
    {{> block_userdashboard/userdashboard_enable_slider}}
{{/enableslider}}


    
