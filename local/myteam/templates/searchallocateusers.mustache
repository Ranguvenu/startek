{{#response}}
    {{#records}}
        {{#teamusers}}
            <li class='li-course'>
                <div class='task-checkbox mt-10'>
                    <div class='checker'>
                        <span class='checked'>
                            <input type = 'radio' id='userid' name = 'allocateuser' class='liChild allocateuser' 
                                value='{{id}}' onclick="(function(e){require('local_myteam/courseallocation').select_type({user: {{id}}, learningtype: 1, pluginname: '{{# str}}pluginname, local_myteam{{/ str}}' })})(event)">
                        </span>
                    </div>
                </div>
                <div class='task-title'>
                    {{picture}}
                    <span class='task-title-sp'>{{fullname}}</span>
                </div>
            </li>
        {{/teamusers}}
    {{/records}}
{{/response}}



