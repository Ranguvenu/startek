{{#response}}
    {{#viewtypeCard}}
        {{#teammembersexist}}
        <div class="">
            <div class="portlet-title">
                 <div class="actions">
                 </div>
            </div>
            <div class="portlet-body">
                 <div class="slimScrollDiv" >
                         
                <table id ="displaymyteam" class="generaltable pull-left mt-15">
                    <thead>
                        <tr>
                            {{#headers}}
                                {{#members}}
                                    <th class="member_col">{{members}}</th>
                                {{/members}}

                                {{#certification}}
                                    <th class="certification_col text-center">{{certification}}</th>
                                {{/certification}}

                                {{#courses}}
                                    <th class="courses_col text-center">{{courses}}</th>
                                {{/courses}}

                                {{#classroom}}
                                    <th class="classroom_col text-center">{{classroom}}</th>
                                {{/classroom}}

                                {{#learningplan}}
                                    <th class="learningplan_col text-center">{{learningplan}}</th>
                                {{/learningplan}}
                                
                                {{#onlinetests}}
                                    <th class="onlinetests_col text-center">{{onlinetests}}</th>
                                {{/onlinetests}}

                                {{#program}}
                                    <th class="program_col text-center">{{program}}</th>
                                {{/program}}

                                {{#supervisorevaluation}}
                                    <th class="program_col text-center">{{supervisorevaluation}}</th>
                                {{/supervisorevaluation}}

                                {{#evaluation}}
                                    <th class="program_col text-center">{{evaluation}}</th>
                                {{/evaluation}}

                                {{#badges}}
                                    <th class="badges_col text-center">{{badges}}</th>
                                {{/badges}}
                                {{#custommatrix}}
                                    <th class="badges_col text-center">{{custommatrix}}</th>
                                {{/custommatrix}}
                                {{#skillrepository}}
                                    <th class="badges_col text-center">{{#str}}competency, local_skillrepository{{/str}}</th>
                                {{/skillrepository}}

                                
                            {{/headers}}
                           
                        </tr>
                    </thead>
                    <tbody>
                        {{#records}}
                        <tr>
                            {{#userfullname}}
                                <td class="member_col">
                                    <a href="{{globals.config.wwwroot}}/local/users/profile.php?id={{userid}}" class="message mr-1 mt-1" title="{{userfullname}}">{{userfullname}}</a>
                                    
                                    {{#custom_matrix}}
                                    <a href="{{globals.config.wwwroot}}/blocks/performance_matrix/viewgraph.php?id={{userid}}" class="message mr-1 mt-1" title="{{userfullname}}"><i class="fa fa-line-chart" style="font-size:24px"></i></a>
                                    {{/custom_matrix}}
                                </td>
                            {{/userfullname}}

                            {{#certification}}
                                <td class="certification_col text-center"><span class='label_colored_info label_{{elementcolor}} team_employeestatus' data-action='popupmodalcourse' data-userid='{{userid}}' data-username='{{username}}' data-moduletype='{{modulename}}'>{{completed}} / {{enrolled}}</span></td>
                            {{/certification}}


                            {{#courses}}
                                <td class="courses_col text-center"><span class='label_colored_info label_{{elementcolor}} team_employeestatus' data-action='popupmodalcourse' data-userid='{{userid}}' data-username='{{username}}' data-moduletype='{{modulename}}'>{{completed}} / {{enrolled}}</span></td>
                            {{/courses}}

                            {{#classroom}}
                                <td class="classroom_col text-center"><span class='label_colored_info label_{{elementcolor}} team_employeestatus' data-action='popupmodalcourse' data-userid='{{userid}}' data-username='{{username}}' data-moduletype='{{modulename}}'>{{completed}} / {{enrolled}}</span></td>
                            {{/classroom}}

                            {{#learningplan}}
                                <td class="learningplan_col text-center"><span class='label_colored_info label_{{elementcolor}} team_employeestatus' data-action='popupmodalcourse' data-userid='{{userid}}' data-username='{{username}}' data-moduletype='{{modulename}}'>{{completed}} / {{enrolled}}</span></td>
                            {{/learningplan}}

                            {{#onlinetests}}
                                <td class="onlinetests_col text-center"><span class='label_colored_info label_{{elementcolor}} team_employeestatus' data-action='popupmodalcourse' data-userid='{{userid}}' data-username='{{username}}' data-moduletype='{{modulename}}'>{{completed}} / {{enrolled}}</span></td>
                            {{/onlinetests}}

                            {{#program}}
                                <td class="program_col text-center"><span class='label_colored_info label_{{elementcolor}} team_employeestatus' data-action='popupmodalcourse' data-userid='{{userid}}' data-username='{{username}}' data-moduletype='{{modulename}}'>{{completed}} / {{enrolled}}</span></td>
                            {{/program}}
                            {{#supervisorevaluation}}
                                <td class="courses_col text-center"><span class='label_colored_info label_{{elementcolor}} team_employeestatus' data-action='popupmodalcourse' data-userid='{{userid}}' data-username='{{username}}' data-moduletype='{{modulename}}'>{{completed}} / {{enrolled}}</span></td>
                            {{/supervisorevaluation}}
                            {{# evaluation}}
                                <td class="courses_col text-center"><span class='label_colored_info label_{{elementcolor}} team_employeestatus' data-action='popupmodalcourse' data-userid='{{userid}}' data-username='{{username}}' data-moduletype='{{modulename}}'>{{completed}} / {{enrolled}}</span></td>
                            {{/ evaluation}}

                            {{#badgescount}}
                                <td class="badges_col text-center"><span class="label_colored_info label_{{elementcolor}}" data-action="popupmodalbadge{{userid}}">{{issuedbadges}} / {{totalbadges}}</span></td>
                            {{/badgescount}} 

                            {{#custom_matrix}}
                                <td class="badges_col text-center">
                                     <a href="{{performance_link}}" class="message mr-1 mt-1" title="Performance view">View</a>
                                </td>
                            {{/custom_matrix}} 
                            {{#skillrepository}}
                                <td class="badges_col text-center">
                                     <a href="{{competency_link}}" class="message mr-1 mt-1" title="Competency">View</a>
                                </td>
                            {{/skillrepository}} 

                        </tr>
                        {{/records}}
                    </tbody>
                </table>
                </div>
            </div>
        </div>
        {{/teammembersexist}}

        {{^teammembersexist}}
            <div class="alert alert-info">{{# str}}team_nodata, local_myteam{{/ str}}</div>
        {{/teammembersexist}}
    {{/viewtypeCard}}
{{/response}}
