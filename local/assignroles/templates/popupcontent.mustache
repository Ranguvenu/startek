{{# enabletable}}
    <table class='generaltable', id='popup_user{{roleid}}'>
        <thead>
            <tr>
                <th>{{# str}} fullname, local_assignroles{{/ str}}</th>
                <th>{{# str}} employeeid, local_assignroles{{/ str}}</th>
                <th>{{# str}} email, local_assignroles{{/ str}}</th>
                <th>{{# str}} open_costcenterid, local_costcenter{{/ str}}</th>
                <th>{{# str}} actions, local_assignroles{{/ str}}</th>
            </tr>
        </thead>
        <tbody>
            {{# rowdata}}
                <tr>                  
                    <td>{{fullname}}</td>
                    <td>{{employeeid}}</td>
                    <td>{{email}}</td>
                    <td>{{orgname}}</td>
                    <td><a style = 'color:#1177d1;cursor:pointer' onclick='(function(e){ require("local_assignroles/popup").unassignConfirm({selector:"unassignpopup", contextid:{{contextid}}, rolename:"{{rolefullname}}", roleid:{{roleid}}, userid:{{userid}}, username:"{{fullname}}"}) })(event)'>{{# str}}unassign, local_assignroles{{/ str}}</a></td>
                </tr>
            {{/ rowdata}}
        </tbody>
    </table>
{{/ enabletable}}
{{^ enabletable}}
    {{# str}} nousertorole, local_assignroles{{/ str}}
{{/ enabletable}}
