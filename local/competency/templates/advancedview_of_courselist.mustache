{{!
    Course competencies template.

    For a full list of the context for this template see the course_competencies_page renderable.
}}

    

<div  data-region="courselistview{{{competencyframeworkid}}}">
    <table class="generaltable fullwidth managecompetencies">
    <tbody class="drag-parentnode">
        <tr class="drag-samenode" data-id="{{competency.id}}">
            <td>
            {{#competency}}  
                <p><strong>{{{competency.shortname}}}  <em>{{competency.idnumber}}</em></strong></p>
                {{# competency.description }}
                    <p>{{{competency.description}}}</p>
                {{/ competency.description }}
            {{/competency}}           
           </td>
        </tr>   
        {{#competencies}}
        <tr class="drag-samenode" data-id="{{competency.id}}">
            <td>
                <div data-region="coursecompetencyactivities">                
                    <ul class="inline list-inline">        
                        <li class="list-inline-item comp_courses_list"><a href="#" onclick='(function(e){ require("local_competency/multiplecompetencyactions").get_competencycourse_activities({{{competency.id}}},{{{competencycourse}}} )})(event)'> {{coursefullname}} </a></li>       
                    </ul>             
                </div>
            </td>
        </tr>
    {{/competencies}}
    </tbody>
    </table>
    {{^competencies}}
    <p class="alert alert-info">
        {{#str}}nocompetenciesincourse, local_competency{{/str}}
    </p>
    {{/competencies}}
    </div>

</div>

{{#js}} 
require(["local_competency/multiplecompetencyactions"], function(){    
    
});
{{/js}}


