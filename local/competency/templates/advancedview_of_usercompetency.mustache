<div  data-region="courseactivitiesview{{{competencyframeworkid}}}">
    <table class="generaltable fullwidth managecompetencies">
    <tbody class="drag-parentnode">
    
        <tr class="drag-samenode" data-id="{{competency.id}}">
        <td>

            {{#competency}}
                <!--<a href="{{pluginbaseurl}}user_competency_in_course.php?courseid={{coursecompetency.courseid}}&competencyid={{competency.id}}&userid={{gradableuserid}}"
                       id="competency-info-link-{{competency.id}}"
                       title="{{#str}}viewdetails, local_competency{{/str}}">
                    <p><strong>{{{competency.shortname}}}  <em>{{competency.idnumber}}</em>
                      - {{{coursefullname}}}</strong></p>
                </a>  -->          <p>{{{competency.description}}}</p>
            {{/competency}}

           
             

            {{#competency_assignedcmodules}} 
            <h6 class="assigned_activities"> {{#str}}activitiesassignedtocompetency, local_competency{{/str}} </h6>
            <ul>
            {{#competencymodule}}
                <li class="list-inline-item local-competency-list"><a href="{{url}}"><img src="{{iconurl}}"> {{name}} </a></li>
            
            {{/competencymodule}}
            </ul>
            {{#usercompetencycourse}}
              
                <!--<span class="label {{^proficiency}}label-important{{/proficiency}}">{{gradename}}</span>-->
               
            {{/usercompetencycourse}}
            {{/competency_assignedcmodules}}



           


            <div data-region="coursecompetencyactivities">
            <h6 class="assigned_activities"> {{#str}}availableactivitiesinthecourse, local_competency{{/str}}  </h6>
            <p>
            <ul >

            {{#restcoursemodules}}
                <li class="list-inline-item local-competency-list"><a href="{{url}}"><img src="{{iconurl}}"> {{name}} </a></li>
            {{/restcoursemodules}}

            {{^restcoursemodules}}
                <li class="list-inline-item local-competency-list"><span class="alert">{{#str}}noactivities, local_competency{{/str}}</span></li>
            {{/restcoursemodules}}
            
            </ul>
            </p>
            </div>
        </td>
        </tr>
   
    </tbody>
    </table>
    
  
    </div>
</div> {{! courseactivitiesview div close tag}}



