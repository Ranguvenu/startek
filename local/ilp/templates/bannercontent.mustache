<div class="w-full ilpbannerContainer">
	<div class="bannerimage banner"></div>
    <span class="bannername">{{#str }} mytrainingplans, local_ilp {{/str}}</span>
    <div class="col-md-4 p-0 bannerilpcontent pull-right">
        <ul class="col-md-12 ilpbannerstatus">
            <li class="ilpbannerstatusitem">
                <p>
                <span class="progressbg completed"></span>
                <span>{{# str }} completed, local_ilp {{/ str}}<span>:</span></span>
                <span class="ilpcount completed">{{completedcount}}</span>
                </p>
            </li>
            <li class="ilpbannerstatusitem">
                <p>
                <span class="progressbg inprogress"></span>
                <span>{{# str }} inprogress, local_ilp {{/ str}}<span>:</span></span>
                <span class="ilpcount inprogress">{{inprogresscount}}</span>
                </p>
            </li>
            <li class="ilpbannerstatusitem">
                <p>
                <span class="progressbg"></span>
                <span>{{# str }} yettostart, local_ilp {{/ str}}<span>:</span></span>
                <span class="ilpcount">{{yettostart}}</span>
                </p>
            </li>
        </ul>
        <div class="bannerilpprogress">
            <div class="progress progress-striped">
                <div class="progress-bar {{ ilpstatusclass }} progress-bar-success" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: {{ilp_completion_percent}}%">
                    <p class="progress-bar-percent-value">{{ilp_completion_percent}}%</p>
                </div>
            </div>
            <div class="pull-right ml-15">{{ilp_completion_percent}}%</div>
        </div>
    </div>
</div>




