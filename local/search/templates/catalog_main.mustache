{{!
    @template catalog/select box

    Displays select box
}}

<div ng-app = 'catalog' >
    <div ng-controller = 'courseController'>
        {{> local_search/catalog_tab }}
   
        <div class=list box text-shadow>
            <div id=demo class='box jplist'>
                <div   class=list ng-init='init(1)'>
                    {{> local_search/catalog_selectbox }}
                    <div class='w-100 pull-left course_view_list_container'>
                        <div class='col-12 pull-left pl-15'>
                            <div ng-show='showLoader' class='loader_container'>
                                <img src= '{{ loader }}' alt='img'></img>
                            </div>
                    
                            <div ng-if="numberofrecords > 0">
                                <div dir-paginate='record in courseinfo | filter:q | itemsPerPage: 8' total-items=numberofrecords class='list-item col-md-3 col-sm-6 col-12 pull-left pl-0 course_view_list' >
                                    <div ng-if="record.id >=1">
                                        <div class='course-body'>
                                            <div ng-if=" tab == 1">
                                               {{> local_search/elearning }}
                                            </div>

                                            <div ng-if=" tab == 2">
                                                <div class="w-full pull-left cr_courses">
                                                    {{> local_search/classroom }}
                                                </div>
                                            </div>

                                            <div ng-if=" tab == 3">
                                                <div class="w-full pull-left cr_courses">
                                                    {{> local_search/program }}
                                                </div>
                                            </div>

                                            <div ng-if=" tab == 4">
                                                <div class="w-full pull-left cr_courses">
                                                    {{> local_search/certification }}
                                                </div>
                                            </div>

                                            <div ng-if=" tab == 5">
                                                <div class="w-full pull-left cr_courses">
                                                    {{> local_search/learningplan }}
                                                </div>
                                            </div>

                                            <div ng-if=" tab == 6">
                                                <div ng-if='record.type == 1'>
                                                    {{> local_search/elearning }}
                                                </div>
                                                <div ng-if='record.type == 2'>
                                                    <div class="w-full pull-left cr_courses">
                                                        {{> local_search/classroom }}
                                                    </div>
                                                </div>

                                                <div ng-if='record.type == 3'>
                                                    <div class="w-full pull-left cr_courses">
                                                        {{> local_search/program }}
                                                    </div>
                                                </div>

                                                <div ng-if='record.type == 4'>
                                                    <div class="w-full pull-left cr_courses">
                                                        {{> local_search/certification }}
                                                    </div>
                                                </div>

                                                <div ng-if='record.type == 5'>
                                                    <div class="w-full pull-left cr_courses">
                                                        {{> local_search/learningplan }}
                                                    </div>
                                                </div>
                                            </div>{{! end of tab == 6 div }}
                                            
                                        </div>{{! end of course-body}}
                                        <div class='section-shadow'></div>
                                    </div>
                                    </div>
                                    
                                </div>{{! end of if condition to check if course info available or not  }}
                            </div> {{! end of list-item  dir paginate}}
                            
                        </div>
                            {{!else for no of records not found}}
                            {{> local_search/recordnotfound }}
                           
                            
                    </div> {{! // end of class=col-md-10 }}
                </div> {{! // end  class='col-md-12 }}
            </div> {{!  // end of list }}  

    {{!--------pagination code starts from here-----------------}}
    <div ng-if="numberofrecords > 0"> {{! for empty records }}
        <div class='col-12 pull-left'>
            <dir-pagination-controls boundary-links='true' on-page-change='pageChangeHandler(newPageNumber, tab)' template-url='dirPagination.tpl.html'>
            </dir-pagination-controls>
        </div>
    </div>

     </div> {{! end of demo }}
    </div> {{! end of  list box text-shadow }}
    
    </div> {{! // end of ngcontroller }}
</div>{{! // end of ng app }}
