{{!
    @template local_search/classroominfo

    Displays classroominfo s

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * none

    Example context (json):
    {
        "completedcount" : 15,
        "itemscount" : 5,
        "timeopen" : "May 15, 2016"
    }

}}

<div class="w-full pull-left info_container">
    <div class="custom_course_top_section col-12 pull-left">
        <div class="custom_course_image col-md-5 col-12 pull-left">
           <div style="background-image: url('{{ classroomlogoimg }}');" class="courseimg_bg"></div>
           <span class="CstripCnt CstripCntrt15"> <span class="pl-10 elearning">Online Course</span> </span>
        </div>
        <div class="custom_course_detail col-md-7 col-12 pull-left">
            <h3 class="custom_course_name w-full pull-left">{{ classroomname }}</h3>
            {{# isdescription}}
                    {{^ descriptionstring}}
                        <p class="w-full pull-left text-muted">{{{ description }}}</p>
                    {{/ descriptionstring }}
                    {{# descriptionstring}}
                        <p class="w-full pull-left text-muted">{{ descriptionstring }} ...</p>
                    {{/ descriptionstring }}
            {{/ isdescription}}
            {{^ isdescription }}
                <p class="w-full pull-left alert alert-info text-center">{{#str}}nocoursedesc, local_courses{{/str}}</p>
            {{/ isdescription }}
            <div class="m-t-1 d-flex justify-content-between flex-row flex-wrap clearboth">
                <!--<div class="d-flex Lpath_dur_cours_container">
                    <div class="d-flex">
                        <div class="pull-left d-flex flex-row flex-wrap align-items-center mx-4">
                            <span class="text-muted pull-left catbtm_colon  d-flex flex-row flex-wrap align-items-center"><span class="icon-clock-o"></span>Duration <span class="colon_align">:</span> </span><span class="text-muted catbtm_info ng-binding" title="">46 Mins.</span>
                        </div>
                        <div class="pull-left d-flex flex-row flex-wrap align-items-center mx-4">
                            <span class="text-muted catbtm_colon d-flex flex-row flex-wrap align-items-center justify-content-end"><span class="icon-window-restore"></span>Modules
                            <span class="colon_align">:</span> </span>
                            <span class="text-muted catbtm_info ng-binding">1</span>
                        </div>
                    </div>        
                </div>-->
                <div class="Lpath_btn_container">
                    {{# is_admin}}
                        <div class="col-12 pull-left enrol invisible">
                            <button class="cat_btn courseenrolbtn pull-right btn btn-primary">{{#str}}enroll, local_search{{/str}}</button>
                        </div>
                    {{/ is_admin}}
                    {{# selfenrolmentcap }}
                        {{^ requestbtn}}
                            {{^ pending}}
                                <div class="w-full pull-right">
                                    <span class="enroll">{{{.}}}</span>
                                </div>
                            {{/ pending}}
                        {{/ requestbtn}}
                        {{# requestbtn}}
                            <div class="w-full pull-right">
                                <span class="enroll">
                                    <a class="viewmore_btn cat_btn fakebtn btn-primary pull-right mr-15" href='javascript:void(0)' onclick="(function(e){ require('local_request/requestconfirm').init({componentid:{{classroomid}}, component:'{{component}}', action:'{{action}}', componentname: '{{classroomname}}' }) })(event)" >
                                    {{# str}} requestforenroll , local_classroom{{/ str}}
                                    </a>
                                </span>
                            </div>
                        {{/ requestbtn}}
                        {{# pending}}
                            <div class="w-full pull-right">
                                <button class="cat_btn btn-primary viewmore_btn">Processing</button>
                            </div>
                        {{/ pending}}
                    {{/ selfenrolmentcap }}
                    {{^ selfenrolmentcap }}
                        {{# userenrolstatus}}
                        <div class="col-md-12 col-12 enrol">
                            <a href={{ linkpath }}><button  class="cat_btn courseenrolbtn pull-right btn btn-primary">{{#str}}start_now, local_search{{/str}}</button></a>
                        </div>
                        {{/ userenrolstatus}}
                        {{^ userenrolstatus}}
                        <div class="col-md-12 col-12 enrol">
                            <a href='javascript:void(0)' class="cat_btn pull-right btn btn-primary">
                                <!--{{#str}}nomination_expired, local_search{{/str}}-->
                                {{{nomination_expired_string}}}
                            </a>
                        </div>
                        {{/ userenrolstatus}}
                    {{/ selfenrolmentcap }}
                </div>
            </div>
        </div>
    </div>
</div>
<ul class="w-100 pull-left py-2 px-0 spotlight-group mt-15">
    <li>
        <div class="spotlight">
            <span class="icon-student font-weight-bold">&nbsp;{{startdate}}&nbsp;-&nbsp; {{enddate}}</span>
            <span class="text-white"><i class="fa fa-calendar pr-1" aria-hidden="true"></i>Scheduled</span>
        </div>
    </li>
    <li>
        <div class="spotlight">
            <span class="icon-student font-weight-bold">{{# classroomlocation }} {{ classroomlocation }} {{/ classroomlocation }} {{^ classroomlocation }} N/A {{/ classroomlocation }}</span>
            <span class="text-white">Classroom Location</span>
        </div>
    </li>
    <li>
        <div class="spotlight">
            <span class="icon-student font-weight-bold">&nbsp;{{# totalseats }} {{ totalseats }} {{/ totalseats }}{{^ totalseats }} N/A {{/ totalseats }}</span>
            <span class="text-white">Total Seats</span>
        </div>
    </li>
    <li>
        <div class="spotlight">
            <span class="icon-student font-weight-bold">&nbsp;{{# allocatedseats }} {{ allocatedseats }} {{/ allocatedseats }}{{^ allocatedseats }} N/A {{/ allocatedseats }}</span>
            <span class="text-white">Allocated Seats</span>
        </div>
    </li>
    <!--<li>
        <div class="spotlight">
            <span class="icon-student">&nbsp;{{# classroomdepartment }} {{ classroomdepartment }} {{/ classroomdepartment }}{{^ classroomdepartment }} N/A {{/ classroomdepartment }}</span>
            <span>Department</span>
        </div>
    </li>-->
</ul>
