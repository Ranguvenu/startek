<div class="quick_nav_list manage_classrooms two_of_three_columns" >
    <span class='anch_span'>
        <!-- <span class='classroom_icon_wrap'></span> -->
        <i class="fa fa-desktop" aria-hidden="true"></i>
    </span>

    <div class='w-100 pull-left'>
        <div class='quick_navigation_detail'>
            <div class='span_str'>{{#str}}manage_br_classrooms,local_classroom{{/str}}</div>
            <span class='span_createlink'>
             {{#createclassroom}}
                <a href='javascript:void(0);' class='quick_nav_link goto_local_classroom' title="{{#str}}create_classroom, local_classroom{{/str}}" onclick='(function(e){ require("local_classroom/ajaxforms").init({contextid:{{contextid}}, component:"local_classroom", callback:"classroom_form", form_status:0, plugintype: "local", pluginname: "classroom", id:0 }) })(event)'>{{#str}}create{{/str}}</a> 
                |
                {{/createclassroom}}
                
                <a href="{{root}}/local/classroom/index.php" class='viewlink' title= "{{#str}}view_classroom,local_classroom{{/str}}" '>{{#str}}view{{/str}}</a>
            </span>
        </div>
     </div>

     <div class="w-100 pull-left">
        <div class="progress w-75 mx-auto my-5">
            <div class="progress-bar" role="progressbar" style="width: {{percentage}}%;" aria-valuenow="{{percentage}}" aria-valuemin="0" aria-valuemax="100">{{percentage}}%</div>
        </div>
    </div>

    <ul class="dashboard_count_list w-100 pull-left p-15">
        <li class="dashbaord_count_item"><span class="">
            <span class="d-block dashboard_count_string">{{# str}}total, local_users{{/ str}}</span><span class="dashboard_count_value">{{count_cr}}</span></span>
        </li>
        <li class="dashbaord_count_item"><span class="">
            <span class="d-block dashboard_count_string">{{# str}}active, local_users{{/ str}}</span><span class="dashboard_count_value">{{count_activecr}}</span></span>
        </li>
        <li class="dashbaord_count_item"><span class="">
            <span class="d-block dashboard_count_string">{{# str}}completed, local_users{{/ str}}</span><span class="dashboard_count_value">{{count_completedclassroom}}</span></span>
        </li>
    </ul>
</div>



