{{# classroom_view_count}}
<div id="{{{subtab}}}" class="tab-pane divslider active active_subtab">
<div class="userdashboard_content userdashboard_ctype_classroom d-flex flex-row flex-{{#enableflow}}no{{/enableflow}}wrap">
{{#enableslider}}
     {{> block_userdashboard/userdashboard_enable_slider}}  
{{/enableslider}}
    {{#moduledetails}}
    <div class="col-sm-6 col-md-4 col-12 tabs_cmn_class courses_inprogress_slide {{{subtab}}} ctype_classroom" data-index="{{index}}">
        <div class="classroom_container w-full">
            <div class="w-full ub_classrooms  d-flex flex-column justify-content-between">
                
                <div class="w-full ub_classroomname">
                    <div class="classroom_icon mr-2">
                        <span class="classicon"></span>
                    </div>
                    <span class="userdashboard_employee_classroom_icon"></span>
                    <a href='{{classroom_url}}' alt="{{classroomFullname}}">{{displayClassroomFullname}}</a>
                </div>
                <div class="w-full d-flex coursecontent flex-column justify-content-between">
                    <div class="desc coursedesc w-full">{{{classroomSummary}}}</div>
                    <div class="schedule w-full d-flex justify-content-between my-3">  <div class="start_date d-flex align-items-center">
                           <span> Start Date :<b class="date">{{{startdate}}}</b></span>
                        </div> 
                        <div class="end_date d-flex align-items-center">
                            <span>End Date :<b class="date">{{{enddate}}}</b></span>
                        </div>
                    </div>
                </div>
                <div class="mt-auto {{#rating_element}}w-full d-flex align-items-center justify-content-between flex-row flex-wrap{{/rating_element}}">
                    <div class="">{{{rating_element}}}</div>
                    <a href="{{classroom_url}}">
                        <button class="btn btn-primary launch_btn">{{#str}}launch,block_userdashboard{{/str}}</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
        
    {{/moduledetails}}  
    {{# viewMoreCard}}
        <div class="col-sm-6 col-12 view_more_data_card ctype_classroom d-flex justify-content-center align-items-center">
            <a class="center_elemet" href="{{{view_more_url}}}">{{#str}}viewmore{{/str}}</a>
        </div>
    {{/ viewMoreCard}}
</div>
</div>
{{/ classroom_view_count}}

{{^ classroom_view_count}}
    {{> block_userdashboard/userdashboard_nodata_text}}  
{{/ classroom_view_count}}
