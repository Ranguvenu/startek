{{# classroom_view_count}}
{{# card_view}}
<div id="{{{subtab}}}" class="tab-pane divslider active active_subtab">
<div class="userdashboard_content userdashboard_ctype_classroom row d-flex flex-row flex-{{#enableflow}}no{{/enableflow}}wrap">
{{#enableslider}}
     {{> block_userdashboard/userdashboard_enable_slider}}  
{{/enableslider}}
    {{#moduledetails}}
    <div class="col-md-5 col-sm-6 col-12 tabs_cmn_class courses_inprogress_slide {{{subtab}}} ctype_classroom" data-index="{{index}}">
        <div class="classroom_container w-full">
            <div class="w-full ub_classrooms">
                <div class="d-flex align-items-center">
                    <div class="classroom_icon mr-2">
                        <span class="classicon"></span>
                    </div>
                    <div class="ub_classroomname  flex-grow-1">
                        <a href="{{classroom_url}}" title="{{classroomFullname}}"> {{displayClassroomFullname}}</a>
                    </div>
                    
                </div>
                <div class="w-full">
                    <div class="w-full coursecontent">
                        <div class="desc coursedesc">{{{classroomSummary}}}</div>
                        <div class="schedule my-2 d-flex align-items-center justify-content-between">    
                            <div class="start_date d-flex align-items-center mb-1">
                                Start Date: <b class="date ml-1">{{{startdate}}}</b>
                            </div> 
                            <div class="end_date d-flex align-items-center">
                                End Date: <b class="date ml-1">{{{enddate}}}</b>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between">
                            <div class="rating_container">
                                <i class="fa fa-star"></i><b>{{ratingavg}}</b>
                            </div>
                            <a href="{{classroom_url}}" class="">
                                <button class="btn btn-primary launch_btn">{{statusname}}</button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
        
    {{/moduledetails}}  
    {{# viewMoreCard}}
        <!-- <div class="col-sm-6 col-12 pull-left view_more_data_card ctype_classroom d-flex justify-content-center align-items-center">
            <a class="center_elemet" href="{{{view_more_url}}}">{{#str}}viewmore{{/str}}</a>
        </div> -->
    {{/ viewMoreCard}}
</div>
</div>
{{/ card_view}}
{{# list_view}}
<table id ="userdashboard_table_content" class="generaltable">
      <thead>
          <tr>
              <th>{{#str}}classroomname, local_classroom {{/str}}</th>
              <th></th>
              <th>{{#str}}description,local_classroom {{/str}}</th>
              <th>{{#str}}startdate, local_classroom {{/str}}</th>
              <th>{{#str}}enddate,local_classroom {{/str}}</th>
             </tr>
    </thead>
    <tbody>
          {{# moduledetails}}
         <tr>
            <td> 
               <a href='{{classroom_url}}' alt="{{classroomFullname}}">{{displayClassroomFullname}}</a> 
            </td>
            <td>
                <a href="{{classroom_url}}">
                   <button class="btn btn-sm launch_btn">{{#str}}launch,block_userdashboard{{/str}}</button>
                 </a>
                 {{{ copyaction }}}
            </td>

            <td> {{{classroomSummary}}} </td>
            <td> {{{startdate}}} </td>
            <td> {{{enddate}}} </td>
          </tr>
        {{/ moduledetails}}
    </tbody>
</table>
{{/ list_view}}

{{/ classroom_view_count}}

{{^ classroom_view_count}}
    {{> block_userdashboard/userdashboard_nodata_text}}  
{{/ classroom_view_count}}
