{{#response}}

    {{! card view }}
    {{#viewtypeCard}}
        <div class="card-wrap  row m-0 w-100">
            {{#records}}
                <div class="{{cardClass}}">
                    <div class="classroom_container w-100  mt-3 mb-2 {{classroomstatusclass}}">
                        <div class="w-100 d-flex classroomname_status justify-content-between">
                            <div class="classroom_name_info">
                                <span class="fa fa-desktop mr-1"></span>
                                <a href="{{ classroomurl }}" class="class_name" title = "{{ classname }}">{{ classname_string }}</a>
                                <span class="bg_banner" title="{{ crstatustitle }}"></span>
                            </div>
                            <div class="dropdown action_menu_dropdown">
                                {{# action}}
                                    {{# mouse_overicon}}
                                        <span  data-toggle="dropdown" class="px-2" aria-expanded="false">
                                            <i class="fa fa-ellipsis-h text-white"></i>
                                        </span>
                                        <div class="dropdown-menu dropdown-menu-right shadow-sm">
                                            
                                            
                                            {{# edit}}
                                                <a class="dropdown-item" title="{{# str}} user_enrollments, local_classroom {{/ str}}" href="javascript:void(0)" title = "{{# str}} edit {{/str}}" onclick="(function(e){ require('local_classroom/ajaxforms').init({contextid:1, component:'local_classroom', callback:'classroom_form', form_status:0, plugintype: 'local', pluginname: 'classroom', id: {{ classroomid }} }) })(event)">
                                                        <i class="fa fa-pencil fa-fw" aria-hidden="true" aria-label="" title = "{{# str}} edit {{/str}}"></i>Edit
                                                    </a>
                                                </li>
                                            {{/ edit}}
                                            {{# assignusers}}
                                                <a class="dropdown-item" href="{{ assignusersurl }}"><i class="fa fa-user-plus fa-fw" aria-hidden="true" aria-label="" title ="{{# str}} assignusers, local_classroom {{/str}}"></i> Assign Users</a>
                                            {{/ assignusers}}
                                            {{# delete}}
                                                <a class="dropdown-item" title="{{# str}} coursebackup {{/ str}}" href="javascript:void(0)" alt = "{{# str}} delete {{/ str}}"
                                                        title = "{{# str}} delete {{/ str}}" onclick="(function(e){ require('local_classroom/classroom').deleteConfirm({action:'deleteclassroom', id: {{ classroomid }}, classroomid: {{ classroomid }}, classroomname: '{{ classname }}'}) })(event)">
                                                        <i class="fa fa-trash fa-fw" aria-hidden="true" aria-label="" title = "{{# str}} delete {{/ str}}"></i>Delete
                                                    </a>
                                                </li>
                                            {{/ delete}}
                                        </div>
                                    {{/ mouse_overicon}}
                                {{/ action}}
                            </div>
                        </div>
                        <div class="row p-10 classroomcontainer_top m-0">
                            <div class="dataContainer col-md-7 col-12  px-2 py-1">
                                <div class="datacontent">
                                    <div class="description">
                                        {{# isdescription}}
                                            {{^ descriptionstring}}
                                                <p class="text-muted">{{{ description }}}</p>
                                            {{/ descriptionstring }}
                                            {{# descriptionstring}}
                                                <p class="text-muted">{{ descriptionstring }}...{{# fullonlineexamsummary }}<a href= "#" data-toggle="popover" title="{{ classname }}" data-content="{{ fullonlineexamsummary }}">{{#str}}more{{/str}}</a>{{/ fullonlineexamsummary }}</p>
                                            {{/ descriptionstring }}
                                        {{/ isdescription}}
                                        {{^ isdescription }}
                                            <p class="alert alert-info text-center">{{#str}}nocoursedesc, local_courses{{/str}}</p>
                                        {{/ isdescription }}
                                    </div>
                                    <div class="dataContainer_left">

                                        <!--<p class="contentlist">
                                            <span class="lable_name text-muted">{{#str}}scheduled_date, local_classroom{{/str}}</span>
                                            <span class="text-muted">: </span>
                                            <span class="">&nbsp;<b>{{ startdate }} to {{ enddate }}</b></span>
                                        </p>-->

                                        <!--<p class="contentlist">
                                            <span class="lable_name text-muted">{{#str}}code, local_courses{{/str}}</span>
                                            <span class="text-muted pull-left">: </span>
                                            <span class="">&nbsp;<b>{{ classname_string }}</b></span>
                                        </p>-->

                                        <p class="contentlist">
                                            <span class="lable_name text-muted">{{#str}}enrolledusers, local_classroom{{/str}}</span>
                                            <span class="text-muted">: </span>
                                            <span class="">&nbsp;<b>{{ enrolled_users }}</b></span>
                                        </p>

                                        <p class="contentlist">
                                            <span class="lable_name text-muted">{{#str}}pluginname, local_costcenter{{/str}}</span>
                                            <span class="text-muted">: </span>
                                            <span class="" title="{{ departmenttitle }}">&nbsp;<b>{{ departmentname }}</b></span>
                                        </p>

                                        <p class="contentlist">
                                            <span class="lable_name text-muted">{{#str}}seats_allocation, local_classroom{{/str}}</span>
                                            <span class="text-muted">: </span>
                                            <span class="">&nbsp;<b>{{ seatallocation }}</b></span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="classesimgContainer col-md-5 col-12  p-0">
                                <div class="classesimgContainer">
                                     <a href="{{ classroomurl }}" class="d-md-block d-none" aria-label="second link">
                                        <div style="background-image: url('{{{ classesimg }}}');" alt="{{ classname }}" title="{{ classname }}" class="classesimg courseimg_bg" aria-hidden="true"></div>
                                    </a>
                                    <!--<img src="{{ classesimg }}" title ="{{ classname }}" class="classesimg" />-->
                                     <!--<div class="classname_strip">
                                         <span class="classname" title = "{{ classname }}" >{{ classname_string }}</span>
                                         <span class="classcreated" title="{{usercreated}}"">By&nbsp;{{ usercreated }}</span>
                                     </div>-->
                                     <div class="classdate_strip p-2">
                                         <span class="classdate">
                                            <i class="fa fa-calendar" aria-hidden="true"></i>{{ startdate }} to {{ enddate }}
                                        </span>
                                     </div>
                                </div>
                            </div>
                        </div>
                        <div class="row classroomcontainer_btm m-0">
                            <div class="col-md-6 col-12 p-0">
                                <div class="trainersContainer p-2 w-100 ">
                                    <h6 class="trainer_header">{{#str}}trainers, local_classroom{{/str}}</h6>
                                    {{# trainerslimit}}
                                        {{# trainers }}
                                        <div class="trainer_details">
                                            <span class="trainerimg pr-2 ">
                                               
                                                    <img src="{{trainerpic}}" alt="Picture of {{trainername}}" title="Picture of {{trainername}}" class="trainer_img userpicture" width="30" height="30">
                                               
                                            </span>
                                            <span class="trainerdetails">
                                                <span class="trainername">{{ trainername }}</span>
                                                <span class="trainerdesignation">{{ trainerdesignation }}</span>
                                            </span>
                                        </div>
                                        {{/ trainers }}
                                    {{/ trainerslimit}}
                                    {{^ trainerslimit }}
                                        {{# moretrainers}}
                                             <div class="trainer_details">
                                                <span class="trainerimg ">{{{ classroomtrainerpic }}}</span>
                                                <span class="trainerdetails"><span class="trainername">{{ trainername }}</span><span class="trainerdesignation">{{ trainerdesignation }}</span></span>
                                            </div>
                                        {{/ moretrainers}}
                                    {{/ trainerslimit}}
                                    {{^ trainers}}
                                            <p class="no_trainers text-center">{{#str}}no_trainer_assigned, local_classroom{{/str}}</p>
                                    {{/ trainers}}
                                </div>
                            </div>
                            <div class="col-md-6 col-12  p-0">
                                <div class="coursesContainer p-2">
                                    <h6 class="trainer_header">{{#str}}courses{{/str}}</h6>
                                    <ul class="crcourseslist  m-0">
                                        {{# courses }}
                                            <li class="w-full d-flex align-items-center">
                                                <p class="contentlist mb-0">
                                                    <a href="{{ courseurl }}" title="{{ coursetitle }}"> {{ coursename }} </a>
                                                </p>
                                            </li>
                                        {{/ courses }}
                                    </ul>
                                    {{^ courses }}
                                        <p class="text-center nocourses">{{# str }} noclassroomcourses, local_classroom {{/ str }}</p>
                                    {{/ courses }}
                                </div>
                            </div>
                        <!--<div class="col-md-12 p-0">
                            <div class="viewmorestrip pull-right pt-15 pb-15">
                                <a href="view.php?cid={{classroomid}}" class="viewmorelink">{{#str}}viewmore{{/str}}</a>
                            </div>
                        </div>-->
                        </div>

                    </div>
                </div>
            {{/records}}
        </div>
    {{/viewtypeCard}}

{{/response}}
