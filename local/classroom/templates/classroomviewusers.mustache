{{#response}}
    

    {{#viewtypeCard}}
    <div class="" id="users_tab_content">

        <table class="w-full pull-left generaltable" id = coursesdata>
            <thead>
                <tr>
                    <th>{{#str}}employee,local_classroom{{/str}}</th>
                    <th>{{#str}}employeeid,local_classroom{{/str}}</th>
                    <th>{{#str}}email{{/str}}</th>
                    <th>{{#str}}supervisor,local_classroom{{/str}}</th>
                    <th>{{#str}}attended_sessions,local_classroom{{/str}}</th>
                    <th>{{#str}}attended_hours,local_classroom{{/str}}</th>
                    <th>{{#str}}status{{/str}}</th>
                    {{#mapped_certificate}}
                        <th>{{#str}}downloadcertificate,local_classroom{{/str}}</th>
                    {{/mapped_certificate}}
                   
                </tr>
            </thead>
            {{#records}}
            <tr>
                <td>
                    <div>
                        <span>
                        {{{name}}}
                        </span>
                    </div>
                </td>
                <td>
                    <span> 
                        <label for="employeeid">
                        {{employeeid}}
                        </label>
                    </span>
                </td>
                <td>
                    <span> 
                        <label for="email">
                            {{email}}
                        </label>
                    </span>   
                </td>
                <td>{{supervisor}}</td>

                <td>{{attendedsessions}}</td>
                <td>{{hours}}</td>
                <td>
                    {{#completionstatus}}
                        <span class="tag tag-success" title="Completed">&#10004;</span>
                    {{/completionstatus}}

                    {{^completionstatus}}
                        <span class="tag tag-danger" title="Not Completed">&#10006;</span>
                    {{/completionstatus}}
                </td>

                {{#mapped_certificate}}
                <td>
                    {{#downloadcertificate}}
                        <div class="editingon course_extended_menu_itemcontainer">
                            <a title="{{# str }} download_certificate, local_classroom {{/ str}}" class="course_extended_menu_itemlink" href="{{wwwroot}}/admin/tool/certificate/view.php?code={{certid}}"><i class="icon fa fa-download" aria-hidden="true"></i></a>
                        </div>
                    {{/downloadcertificate}}
                    {{^downloadcertificate}}
                        <div class="editingon course_extended_menu_itemcontainer">
                            <span class = "editingon course_extended_menu_itemcontainer">{{# str }} notassigned, local_classroom {{/ str}}
                            </span>
                        </div>
                    {{/downloadcertificate}}
                </td>
                {{/mapped_certificate}}

            </tr>
        {{/records}}
        </table>
    </div>
    {{/viewtypeCard}}
{{/response}}
