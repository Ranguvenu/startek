{{#response}}
    {{#viewtypeCard}}
    <div class="" id="courses_tab_content">

        <table class="w-full pull-left generaltable" id = coursesdata>
            <thead>
                <tr>
                    <th>{{#str}}course{{/str}}</th>
                    <th>{{#str}}completion_status,local_classroom{{/str}}</th>
                    {{#action}}{{#selfenrolmenttabcap}}
                        <th>{{#str}}actions{{/str}}</th>
                    {{/selfenrolmenttabcap}}{{/action}}
                </tr>
            </thead>
            {{#records}}
            <tr>
                <td>
                 <a title="{{name}}" class="course_extended_menu_itemlink" href="{{linkpath}}">{{name}}</a>
                </td>
                <td>{{status}}</td>
                {{#selfenrolmenttabcap}}
                {{#action}}
                <td>
                    <a href="javascript:void(0);" alt = "{{#str}}unassign,local_classroom{{/str}}" title = "{{#str}}unassign,local_classroom{{/str}}" onclick="(function(e){ require('local_classroom/classroom').deleteConfirm({action:'deleteclassroomcourse', classroomid: {{classroomid}},name:'{{{name}}}',
                        id: {{id}} }) })(event)" >
                        <i class="fa fa-times fa-fw" ></i></a>
                </td>
                {{/action}}
                {{/selfenrolmenttabcap}}
            </tr>
        {{/records}}
        </table>
    </div>
    {{/viewtypeCard}}
{{/response}}
