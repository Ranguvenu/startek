<div class="d-block">
    <div class="user_info_left">
        <div class="user_gen_info w-full pull-left">
            <div class="general_info text-center">
                <div class="general_info_container">
                    <h5 class="text-left">
                        <span>{{#str}}welcome, local_users{{/str}}</span>
                        <span class="welcome_text">{{prefix}} {{ username }}</span>
                    </h5>
                    <div class="col-md-3 col-12 pull-left pl-0 userimage-container">
                        <div>{{{ userimage }}}</div>
                        <div class="mt-2">
                            {{# capabilityedit}}
                                <a href="javascript:void(0)" class="edit_icon mr-1" title="{{#str}}edit_profile, local_users{{/str}}" onclick='(function(e){ require("local_users/newuser").init({selector:"createusermodal", context:1, id:{{{userid}}}, form_status:0}) })(event)'><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                            {{/ capabilityedit}}
                            
                           <!--  <a href="{{config.wwwroot}}/message/index.php" class="message mr-1" title="{{#str}}messages, local_users{{/str}}"><i class="fa fa-envelope" aria-hidden="true"></i></a> -->
                            {{# loginasurl}}
                                <a href="{{{loginasurl}}}" class="edit_icon mr-1" title="{{#str}}loginas{{/str}}"><i class="fa fa-sign-in" aria-hidden="true"></i></a>
                            {{/ loginasurl}}
                        </div>
                        <div>
                            <span>{{ user_email }}</span>
                        </div>
                    </div>
                
                    <div class="col-md-9 col-12 pull-left user_info_left">
                        <div class="top_counts_container">
                            <ul class="allcounts_list w-full pull-left m-0 p-0 list-unstyled">
                                {{# existingplugin}}
                                    <li class="col-12 col-md-6 col-lg-4 col-xl-2 pull-left text-center pr-0">
                                        <div>
                                            <span class="totalcounts">{{ userenrolledcount }}</span>
                                            <span class="counts_data">{{ string }}</span>
                                        </div>
                                    </li>
                                {{/ existingplugin}}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{> local_users/userprofiletabs }}
