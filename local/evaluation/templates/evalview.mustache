{{# evalid}}

<div class="w-full  text-center">
        <div class="w-full  evalactions">
            {{{actions}}}
        </div>
    </div>
<div class="evalview_topcontainer" > <!-- style="background-image:url()" -->
    <div class="w-full evalview_topcontent ">
        <div class="w-full classview_topcontent_right">
		
            <h3><span class="evalicon"><i class="fa fa-clipboard" aria-hidden="true"></i></span>  {{ evalname }}</h3>
			
            <div class="description">
                {{# description}}
                    <p class="">{{{ description }}}</p>
                {{/ description}}
                {{^ description }}
                    <p class="alert alert-info text-center">{{#str}}nocoursedesc, local_courses{{/str}}</p>
                {{/ description }}
            </div>
            <div class="topcontent_right_middle mb-4">
                <div class="evalinfo_container d-flex">
					<div class="aligninline mr-3">
						<span class=" eval_schedule_label"><i class="fa fa-calendar pr-1" aria-hidden="true"></i> {{# str}}schedule, local_evaluation{{/ str}}<span>:</span> 
						</span><span class="eval_data"><b>{{ schedule }}</b></span>
					</div>
                    <div class="border-right"></div>
					{{# has_evalcap}}
						<div class="aligninline mx-3">
							<span> {{# str}}enrolled, local_evaluation{{/ str}}<span >:</span> 
							</span><span class="eval_data"><b>{{{ enrolled }}}</b></span>
						</div>
                        <div class="border-right"></div>
                    {{/ has_evalcap}}
                    <div class="aligninline mx-3">
                        <span > {{# str}}type, local_evaluation{{/ str}}<span>:</span> 
                        </span><span class="eval_data"><b>{{ evaltype }}</b></span>
                    </div>
                    <div class="border-right"></div>
                    {{# has_evalcap}}
						<div class="aligninline mx-3">
							<span>{{# str}}completed, local_evaluation{{/ str}}<span>:</span> 
							</span><span class="eval_data"><b> {{{ completed }}}</b></span>
						</div>
					{{/ has_evalcap}}
				</div>
            </div>
        </div>
    </div>
</div>
{{/ evalid}}
