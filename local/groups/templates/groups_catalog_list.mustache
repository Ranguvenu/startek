{{#viewtypeCard}}
<table id ="manage_groups" class="generaltable">
    <thead>
        <tr>
            <th>{{#str}}group_name, local_groups{{/str}}</th>
            <th>{{#str}}tabgroupid, local_groups{{/str}}</th>
            <th>{{#str}}grouptabuserscount, local_groups{{/str}}</th>
            <th>{{#str}}open_costcenterid, local_costcenter{{/str}}</th>
            <th>{{#str}}actions, local_users{{/str}}</th>
        </tr>
    </thead>
    <tbody>
        {{#records}}
      
        <tr class ="{{^ visible}} inactive {{ /visible}}">
            {{# groupname}}
             <td>{{ groupname }}</td>
            {{/ groupname}} 
           
            <td>{{{ groupid }}}</td>
            <td>{{groupcount}}</td>
            <td>{{ orgname }}</td>
            <td>
                  <ul class="list-group list-group-horizontal list-unstyled" id="showoptions{{userid}}"> {{{actions}}} </ul>
                 {{{ copyaction }}}
            </td>
        </tr>
       {{/records}}
    </tbody>
</table>
