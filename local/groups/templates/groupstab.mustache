<!-- Groups users View -->
<div class="row m-0">
 {{#response}}
{{#viewtypeCard}}
 {{#records}}
    <div class="group_card {{cardClass}} {{^ visible}} inactive {{ /visible}}">
        <div class="card-page">
            <div class="groups_content">
                {{ # groupname }}
                <div class="card-title d-flex justify-content-between"><b>{{ groupname }}</b>
                    <div class=" dropdown action_menu_dropdown">
                        <span  data-toggle="dropdown" class="px-2" aria-expanded="false">
                            <i class="fa fa-ellipsis-h "></i>
                        </span>
                          {{ / groupname }}
                       <div class="pull-right dropdown-menu dropdown-menu-right shadow-sm">{{{actions}}} </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6 d-flex align-items-center">  
                        <div class="group_id">
                            <p><b>{{#str}}tabgroupid, local_groups{{/str}}:</b></p>
                        </div>
                        <div class="groupid  ml-2">
                          <p>{{{ groupid }}}</p>
                        </div>
                    </div>
                    <div class="col-sm-6 d-flex align-items-center">  
                        <div class="group_count">
                            <p><b>{{#str}}grouptabuserscount, local_groups{{/str}}:</b></p>
                        </div>
                        <div class="groupcount ml-2">
                            <p>{{groupcount}}</p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 d-flex align-items-center">  
                    <div class="group_count pull-left">
                       <p><b>{{#str}}open_costcenterid, local_costcenter{{/str}}:</b></p>
                    </div>
                    <div class="groupcount ml-2 pull-left">
                        <p>{{orgname}}</p>
                    </div>
                </div>
                <div class="col-sm-12 pull-left mb-10">
                    <ul>
                        {{{userimages}}}
                    </ul>
                </div>  
            </div>
            <div>
                <a href="{{ location_url }}" class="group_view btn btn-primary pull-right mr-10 ">{{#str}}grouptabmanageusers, local_groups{{/str}}</a>
            </div>
        </div>
    </div>
  {{/records}}
 {{/viewtypeCard}}
{{/response}}
</div>
