<div class="departments_view_wrapper d-inline-blocks">

    {{> local_positions/domain_view}}

    <!-- Departments View -->
    <div class="dept_container {{deptclass}}">
        <div class="col-md-12 col-sm-12 col-12 p-0 pull-left evendepts">
            
            {{# positions_content}}
                {{# even }}
                    {{> local_positions/positions_content}}
                {{/ even }}
                {{# odd }}
                    {{> local_positions/positions_content}}
                {{/ odd }}
            {{/ positions_content}}
        </div>
    </div>

</div>

{{#js }}
    var accItem = document.getElementsByClassName('dept_content');
    var accHD = document.getElementsByClassName('position_container');
    for (i = 0; i < accHD.length; i++) {
        accHD[i].addEventListener('click', toggleItem, false);
    }
    function toggleItem() {
        var itemClass = this.parentNode.className;
        for (i = 0; i < accItem.length; i++) {
            accItem[i].className = 'col-md-12 col-sm-12 col-12 pull-left dept_content domain_pos_container';
        }
        if (itemClass == 'col-md-12 col-sm-12 col-12 pull-left dept_content domain_pos_container') {
            this.parentNode.className = 'col-md-12 col-sm-12 col-12 pull-left dept_content domain_pos_container detailsopen';
        }
    }
{{/ js}}