<div class="w-full  p-3 planview_container">
	<ul class="course_extended_menu_list">
		{{# certificate_exists }}
            {{# certificate_download }}
                    <li>
	                    <a class="course_extended_menu_itemlink" title="{{#str}} download_certificate, local_courses {{/ str}}" class="course_extended_menu_itemlink" href="{{ config.wwwroot}}/admin/tool/certificate/view.php?code={{certificateid}}" target = "_blank"><i class="icon fa fa-download" aria-hidden="true"></i>
	                    </a>
                    </li>
            {{/ certificate_download }}
            {{^ certificate_download }}
                   <li>
                        <a class="course_extended_menu_itemlink" title="{{# str}} unableto_download_msg, tool_certificate, Learning path {{/str}}" class="course_extended_menu_itemlink" href="javascript: void(0)"><i class="icon fa fa-download" aria-hidden="true"></i>
                        </a>
                    </li> 
            {{/ certificate_download }}
        {{/ certificate_exists }}
		{{# unenrol_flag}}
  					<li>
						<a class="course_extended_menu_itemlink unenrolself_module" onclick="(function(e){ require('local_learningplan/courseenrol').unEnrolUser({planid:{{{planid}}}, userid:{{{userid}}}, planname:'{{{lpname}}}'}) })(event)" href="javascript:void(0)">
							<i class="icon fa fa-user-times" aria-hidden="true" aria-label="" title="Unenrol"></i>
						</a>
					</li>
		{{/ unenrol_flag}}

	</ul>
	<div class="  planview_topcontainer px-5">
		<div class="border-top"></div>
		<div class="d-flex planview_topcontent mx-0 my-4  w-full">

			<div class="learningpath_img d-none-1023 ">
				<div style="background-image: url('{{ lpimgurl }}');height:207px;" alt="{{ lpname }}" title="{{ lpname }}" class="lpimg_bg" ></div>

			<!-- {{{display_ratings}}}
			{{{display_like}}} -->
			</div>
		
			{{# needenrol}}
			<a class='btn btn-primary  mr-15' href='javascript:void(0)' onclick='(function(e){
			require("local_learningplan/courseenrol").enrolUser({planid:{{{planid}}}, userid:{{{userid}}}, planname:"{{{lpname}}}" }) })(event)'><i class="fa fa-pencil-square-o" aria-hidden="true"></i>{{# str}} enrol , local_learningplan{{/ str}}</a>
			{{/ needenrol}}
		
			<div class="learningpath_desc d-block-1023 px-4">
				<!--<h4 class='pull-left mb-5 lp_name'>{{ lpname }}</h4>-->	
				<div class="w-full  pb-10">
					<div class="desc_header row  align-items-center justify-content-between">
						<div class="col-md-6">
							<div class="desc_title mb-1"><h5 class='lp_name'>{{ lpname }}</h5></div>
						</div>
						<div class="rating_stars col-md-6 d-flex justify-content-end">
							{{{display_like}}}
						</div>
					</div>
					<!-- <span class="w-full pull-left mb-1"><b>{{#str}}description{{/str}}:</b></span> -->
					<div class="w-full mt-2 description">
						{{# description_string }}
							<p class="m-0">{{{ description_string }}}</p>
						{{/ description_string }}
						{{^ description_string }}
							<p class="alert alert-info text-center m-0">{{#str}}nocoursedesc, local_courses{{/str}}</p>
						{{/ description_string }}
					</div>
				</div>
				<div class="progress_bar mt-4">
					<h6 class="mb-0">Progress</h6>
					<div class="max_progress d-flex align-items-baseline">
						<div class="progress flexgrow-1">
			            	<div class="progress-bar text-center" role="progressbar" style="width: {{planpercent}}%;" aria-valuenow="{{planpercent}}%" aria-valuemin="0" aria-valuemax="100"></div>
			        	</div>
			        	<span class="progress_percentage ml-2">{{planpercent}}%</span>
					</div>
				</div>
				<div class="rating_stars  align-items-center d-flex justify-content-end">
					{{{display_ratings}}}
				</div>
				<div class="row">
					<div class="col-md-12">
						<div class="w-full  mt-2 coursepath"> {{{lpcoursespath}}} </div>
					</div>
				</div>
				
		</div>
	</div>
</div>
</div>
