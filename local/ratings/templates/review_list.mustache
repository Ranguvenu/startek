{{!
    @template local_ratings/review_list

    This template renders the review content for the ratings plugin.

    Example context (json):
    {}
}}
{{# response}}
    {{! card view }}
    {{# viewtypeCard}}
        {{# records}}
            <div class="{{cardClass}} pull-left">
                <div class="comment_description">
                    {{comment}}
                </div>
                <span class="pull-right">
                    <img src="{{userpic}}" class="userpic defaultuserpic" width="20" height="20" alt="Picture of {{userfullname}}" title="Picture of {{userfullname}}">
                </span>
            </div>
        {{/ records}}
    {{/ viewtypeCard}}
{{/ response}}