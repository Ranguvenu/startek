{{!
    @template local_ratings/view_item

    This template renders the review content for the ratings plugin.

    Example context (json):
    {}
}}
<div class="jq-ry-container" style="width:{{containerWidth}}px">
    <div class="jq-ry-group-wrapper">
        <div class="jq-ry-normal-group jq-ry-group">
            {{# starcount}}
                {{< local_ratings/rating_stars }}
                    {{$fill}}grey{{/fill}}
                {{/ local_ratings/rating_stars }}
            {{/ starcount}}
        </div>
        <div class="jq-ry-rated-group jq-ry-group" style="width:{{modulerating}}%">
            {{# starcount}}
                {{< local_ratings/rating_stars }}
                    {{$fill}}#ffc107{{/fill}}
                {{/ local_ratings/rating_stars }}
            {{/ starcount}}
        </div>
    </div>
</div>
