<div class="course_drawer_header_container">
    <div class="course_image d-flex flex-column align-items-start justify-content-end" style="background-image: url('{{coursebannerimage}}');">
        <div class="course_title text-white">{{coursename}}</div>
    </div>
    <div class="content d-flex align-items-center justify-content-center">
        <div class="progress flex-grow-1">
            <div class="progress-bar" role="progressbar" style="width: {{{percentage}}}%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>         
        </div>
        <span class="percentage text-white ">{{{percentage}}}%</span>
        
    </div>
    <div class="d-flex justify-content-between flex-row-reverse rating_container ">
        {{{display_ratings}}}
    </div>
    
</div>
