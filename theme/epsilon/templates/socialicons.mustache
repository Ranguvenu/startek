{{!
    @template theme_waxed/socialicons

    StageTwo Social Icons display.

    Context variables required for this template:
    * hassocialnetworks
    * hasfacebook
    * hastwitter
    * haslinkedin
    * hasyoutube
    * hasinstagram
    * socialicons
}}


{{#hassocialnetworks}}
        <div class="social_icons d-inline-block">
            {{#socialicons}}
                {{# facebook}}
                    <a target='_blank' href='{{ facebook }}' class = 'social social-facebook fa fa-facebook' title='Facebook'></a>
                {{/ facebook }}
                {{# twitter }}
                    <a target="_blank" href='{{ twitter }}' class = 'social social-twitter fa fa-twitter' title="Twitter"></a>
                {{/ twitter }}
                {{# linkedin }}
                    <a target="_blank" href='{{ linkedin }}' class = 'social social-linkedin fa fa-linkedin' title="Linkedin"></a>
                {{/ linkedin }}
                {{# youtube }}
                    <a target="_blank" href='{{ youtube }}' class = 'social social-youtube fa fa-youtube' title="Youtube"></a>
                {{/ youtube }}
                {{# instagram }}
                    <a target="_blank" href='{{ instagram }}' class = 'social social-instagram fa fa-instagram' title="Instagram"></a>
                {{/ instagram }}
            {{/socialicons}}
        </div>
{{/hassocialnetworks}}

