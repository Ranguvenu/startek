{{!
    Page header.
}}
{{{ output.doctype }}}
<html {{{ output.htmlattributes }}}>
<head>
    <title>{{{ output.page_title }}}</title>
    <link rel="shortcut icon" href="{{{ output.favicon }}}" />
    {{{ output.standard_head_html }}}

    <style media="screen">
        :root {
            --primarycolor:{{{ output.get_primarycolor}}};
            --secondarycolor:{{{ output.get_secondarycolor}}};
            --hovercolor:{{{ output.get_hovercolor}}};
            --sitehighlight: var(--primarycolor);
            --buttonbgcolor: var(--secondarycolor);
            --btntextcolor: #ffffff;
            --btnhoverbgcolor: var(--secondarycolor);
            --btnhovertextcolor: #ffffff;
            --btnbordercolor: var(--secondarycolor);
            --linkcolor: var(--primarycolor);
            --linkhovercolor: var(--hovercolor);

            --sidebarbgstartcolor: var(--primarycolor);
            --sidebarbgendcolor:  var(--primarycolor);
            --blockheaderstartbg: var(--primarycolor);
            --blockheaderendbg:  var(--primarycolor);
            --blocktextcolor: #333333;
            --headerbgcolor: #F2F4FB;
            --bodybgcolor: #F2F4FB;
            --tblhdstartbg: var(--secondarycolor);
            --tblhdendbg: var(--secondarycolor);
            --tbltextcolor: #fff;
            --gradientcolor: #fff;
            --coursecontainerbg: #d6e5ec;
            --usernavhvrbg: #ffffff;
            --usernavhvrlink: var(--secondarycolor);

            --iconbgcolor: var(--sitehighlight);

            --lightbuttonbgcolor : lighten(var(--buttonbgcolor), 30%);
            --lightblockhdrstart : lighten(var(--blockheaderstartbg), 30%);
            --lightblockheaderend : lighten(var(--blockheaderendbg), 15%);
        }
    </style>
    <link rel="stylesheet" href="{{output.getsitecolors_link}}" >

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
