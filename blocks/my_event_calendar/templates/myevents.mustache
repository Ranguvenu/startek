{{!
    @template block_my_event_calendar/myevents

    Select an action to execute.

    Classes required for JS:
    * none

    Data attibutes required for JS:
    * none

    Context variables required for this template:
    * message - The message to explain why we ask user to select an action
    * choices - List of possible actions
    * confirm - Text for button confirms
    * cancel -  Text for button cancel

    Example context (json):
    {
        "message": "Message",
        "choices": [
            { "value": "1", "text": "One" },
            { "value": "2", "text": "Two" }
        ],
        "confirm": "Confirm",
        "cancel": "Cancel"
    }
}}
    <div class="trainingsession_title" >{{selecteddate}}</div>
    <table class="w-full pull-left event_table"><thead><tr><th></th></tr></thead><tbody>
            {{#events}}
            <tr>
                <td>
                    <a href="{{pluginurl}}"  {{# popup}} onclick="(function(e){ require('block_my_event_calendar/event_popup').popup_eventinfo({ eventid:{{id}}, eventinstance:{{instance}}, eventlocal_eventname:'{{local_eventname}}', eventlocal_eventstartdate:'{{local_eventstartdate}}', eventlocal_eventenddate:'{{local_eventenddate}}', eventeventtype:'{{eventtype}}', eventtrainer:'{{trainer}}', eventenrolled:{{enrolled}}, eventself_enrol:{{self_enrol}}, eventplugin:'{{plugin}}', eventlocation:'{{location}}'}) })(event)" {{/ popup}}>

                    <div class="session_title ilt {{plugin}}" id="eventclick{{id}}">

                    <span class="test" title="{{local_eventname}}">
                        <span>{{eventfullname}}</span>
                    </span>

                    {{# eventenddate}}
                        <span>{{event.local_eventenddate}}</span><i class="fa fa-chevron-right" aria-hidden="true"></i></div></a>
                    {{/ eventenddate}}

                    {{^ eventenddate}}
                        <i class="fa fa-chevron-right" aria-hidden="true"></i></div></a>
                    {{/ eventenddate}}
                </td>
            </tr>
        {{/events}}
    </table>



