{{!
    @template block_trainerdashboard/trainerdashboardfilters

    Moodle template for the list of valid options in an autocomplate form element.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * show show field
    * filterform filter form field

    Example context (json):
    {
        "canfilter": true,
        "show":"",
        "filterform":"\n<form autocomplete=\"off\" action=\"http:\/\/localhost\/concentrix\/local\/trainerdashboard\/index.php\" method=\"post\" accept-charset=\"utf-8\" id=\"custom_global_filter_form\" class=\"mform\">/form>"
    }
}}
{{#canfilter}}
    <a class="btn-link btn-sm collapsed" href="javascript:void(0);" data-toggle="collapse" data-target="#block_trainerdashboard-filter_{{type}}" aria-expanded="false" aria-controls="block_trainerdashboard-filter_{{type}}" title="{{filters}}">
        <i class="m-0 fa fa-sliders fa-2x" aria-hidden="true"></i>
    </a>
    <div class="mt-2 mb-2 collapse {{show}} block_filter_collapse" id="block_trainerdashboard-filter_{{type}}">
        <div id="filters_form" class="card card-body p-2">
            {{{filterform}}}
        </div>
    </div>
{{/canfilter}}