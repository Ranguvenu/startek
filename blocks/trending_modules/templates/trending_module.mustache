    {{# records}}
    <div class="col-md-4 col-lg-3 col-sm-6 rounded trending_modules-container" >
        <div class="trending_module" data-index="{{indexposition}}">
            <div class="module_image mx-auto" style="background-image: url('{{background_logourl}}'); height:auto; width:100%"></div>
            <div class="module_content">
                <a href="{{modulelink}}" class="modulename" title="{{modulename_title}}">
                    <!-- {{#str}}viewmore, block_trending_modules{{/str}} -->
                    {{modulename_title}}
                 </a>
                <!-- <span class="modulename" title="{{modulename_title}}" onclick="{{modulelink}}">{{modulename}}</span> -->
                {{# enableDesc}}
                    {{# description}}
                        <span class="module_description" title="{{description_title}}">{{description}}</span>
                    {{/ description}}
                    {{^ description}}
                        <span class="alert alert-info text-center module_description">{{#str}}nocoursedesc, block_trending_modules{{/str}}</span>
                    {{/ description}}
                {{/ enableDesc}}
                <div class="rating_sugg w-full d-inline-block">
                    {{{ratings_content}}}
                </div>
            </div>
        </div>
    </div>
    {{/ records}}
    {{^ records}}
        <div class="w-100 pull-left alert alert-info module_description">{{# str}}no_modules_found, block_trending_modules{{/ str}}</div>
    {{/ records}}
