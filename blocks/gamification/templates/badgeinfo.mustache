{{!
    @template local_courses/catalog

    This template renders the courses content for the courses plugin.

    Example context (json):
    {}
}}

<div class="badgecontent-container">
<div class="badgecontent">
    <div class="w-100 pull-left badgeimagecontent">
        <span class="badge_status {{badgeclass}}">{{badgestring}}</span>
        <!-- <img src="{{badgeurl}}" class='badgeimage'> -->
        {{# manage}}
            <div class="pull-right text-right actionicons showoptions{{badgeid}}">
                <span  class="pull-right showoptions" onmouseenter="(function(e){ require('theme_concentrix/quickactions').quickactionsCall({ selector:'showoptions{{badgeid}}' }) })(event)" onmouseleave="(function(e){require('theme_concentrix/quickactions').quickactionsCall({ selector:'showoptions{{badgeid}}' }) })(event)">
                    <div class="actiondots"></div>
                </span>
                <ul class="col-md-12 col-sm-12 col-12 p-0 m-0 options_container" id = "showoptions{{badgeid}}">
                    {{# editicon }}
                    <li>
                        {{{editicon}}}
                    </li>
                    {{/ editicon }}
                    {{# deleteicon }}
                    <li>
                        {{{deleteicon}}}
                    </li>
                    {{/ deleteicon }}
                </ul>
            </div>
        {{/ manage}}
        <div style="background-image: url('{{{ badgeurl }}}');" alt="{{ badgestring }}" class="badgeimage" ></div>
    </div>
    <div class="col-md-11 float-none m-auto">
        <div class="w-100 p-3 pull-left badgedescription ">
            <p class='w-100 pull-left reporting mb-0 pl-1'>
                <span class='lable_align'>{{# str}} badge_label, block_gamification{{/ str}}</span>
                <span class='mx-1'>:</span>
                <span title='{{badgetitle}}'>{{badgename}}</span>
            </p>
            <p class='w-100 pull-left reporting mb-0 pl-1'>
                <span class='lable_align'>{{# str}} account_label, block_gamification{{/ str}}</span>
                <span class='mx-1'>:</span>
                <span>{{accountname}}</span>
            </p>
            {{# badgeforenable}}
            <p class='w-100 pull-left reporting mb-0 pl-1'>
                <span class='lable_align'>{{badgeforlabel}}</span>
                <span class='mx-1'>:</span>
                <span title='{{badgefor_value_title}}'>{{badgefor_value}}</span>
            </p>
            {{/ badgeforenable}}
            <span class="badge_award_container mt-2">
                {{{viewawarded}}}
                {{{viewawardees}}}
                {{{badgeallocate}}}
            </span>
            <!--<span class="btmtagcontainer">
                <span class="btmtagtoplayer"></span>
                <span class="btmtag"></span>
            </span>-->
            </div>
        </div>
    </div>
</div>