{{!
    @template block_gamification/modal-popup-notification

    Modal popup notification.

    Example context (json):
    {
    }
}}
{{< core/modal }}
    {{$title}}
        {{! Note, the title won't display on Moodle 3.3 with Boost due to incorrect template. }}
        {{#str}} congratulationsyouleveledup, block_gamification {{/str}}
    {{/title}}
    {{$body}}
        <div class="block_gamification">
            <div class="gamification-text-center">
                {{#levelname}}
                    {{#str}}youreachedlevel, block_gamification{{/str}}
                {{/levelname}}
                {{^levelname}}
                    {{#str}}youreachedlevela, block_gamification, {{levelnum}}{{/str}}
                {{/levelname}}
            </div>
            <div class="[&>*]:gamification-mx-auto">
                {{{levelbadge}}}
            </div>
            {{#levelname}}
                <div class="gamification-text-center gamification-font-bold">
                    {{levelname}}
                </div>
            {{/levelname}}
            {{#message}}
            <div class="gamification-mt-6 gamification-text-lg gamification-flex gamification-justify-center">
                {{{message}}}
            </div>
            {{/message}}
        </div>
    {{/body}}
    {{$footer}}
        <button type="button" class="btn btn-primary" data-action="hide">{{#str}} coolthanks, block_gamification {{/str}}</button>
    {{/footer}}
{{/ core/modal }}

