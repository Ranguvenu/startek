{{!
    @template block_gamification/progress-bar

    Progress bar.

    Example context (json):
    {
        "percentagehuman": "12.3",
        "percentage": "12.3"
    }
}}
<div class="block_gamification-level-progress gamification-flex gamification-flex-col">
    <div>
        <div class="gamification-bg-gray-200 gamification-rounded-full gamification-h-3 gamification-relative gamification-overflow-hidden" role="progressbar" aria-valuenow="{{percentagehuman}}" aria-valuemin="0" aria-valuemax="100">
            <div style="width: {{percentage}}%;" class="gamification-h-full gamification-bg-green-400 {{#nonzero}}gamification-min-w-[0.25rem]{{/nonzero}} {{#nonfull}} gamification-max-w-[99%] {{/nonfull}}"></div>
        </div>
    </div>
    <div class="gamification-flex gamification-justify-end gamification-self-end gamification-text-right gamification-text-sm gamification-leading-none gamification-mt-1">
        {{^atmaxlevel}}
        <div class="gamification-text-gray-500 gamification-text-xs">
            {{^islevelless}}{{#str}}nextlevelin, block_gamification{{/str}}{{/islevelless}}
            {{#islevelless}}{{#str}}remaining, block_gamification{{/str}}{{/islevelless}}
        </div>
        <div class="gamification-ml-1">{{{nextinvaluehtml}}}</div>
        {{/atmaxlevel}}
        {{#atmaxlevel}}
        <div class="gamification-text-gray-500 gamification-text-xs">
            {{#str}}maxlevelexcl, block_gamification{{/str}}
        </div>
        {{/atmaxlevel}}
    </div>
</div>