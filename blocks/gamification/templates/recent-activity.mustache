{{!
    @template block_gamification/recent-activity

    Recent activity list.

    Example context (json):
    {
    }
}}
<div class="block_gamification-recent-activity">
    <h5 class="block_gamification-heading">{{#str}}recentrewards, block_gamification{{/str}}</h5>
    {{^hasrecentactivities}}
        <p>-</p>
    {{/hasrecentactivities}}
    {{#hasrecentactivities}}
    {{#x}}
        <div class="gamification-space-y-0.5">
        {{#recentactivities}}
            <div class="activity-entry gamification-text-sm gamification-flex">
                <div class="gamification-flex-none gamification-text-gray-500 gamification-order-1" title="{{date}}">{{dateagotiny}}</div>
                <div class="gamification-flex-none gamification-min-w-[2.25rem]">{{{gamificationhtml}}}</div>
                <div class="gamification-flex-1 gamification-mx-2">{{description}}</div>
            </div>
        {{/recentactivities}}
        </div>
        {{/x}}

        <table class="gamification-w-full gamification-border-0">
        {{#recentactivities}}
            <tr>
                <td class="gamification-align-top gamification-p-0 gamification-pr-2">{{{gamificationhtml}}}</td>
                <td class="gamification-align-top gamification-p-0 gamification-mx-2">{{description}}</td>
                <td class="gamification-align-top gamification-p-0 gamification-pl-2 gamification-text-gray-500 gamification-text-right" title="{{date}}">{{dateagotiny}}</td>
            </tr>
        {{/recentactivities}}
        </table>

    {{/hasrecentactivities}}
</div>