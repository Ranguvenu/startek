{{# desktop_view}}
    <div class='userdashboard_block p-0 flex-row flex-nowrap '>
        <div class="menulinks_container navbar navbar-expand-md p-0">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="block_dashboard_tabslist row">
                {{# links}}
                    <li class="block_dashboard_tabslistitem col-md-2">
                        <div class="dashboard-stat {{active_class}}">
                            <a id="{{id}}" data-templatename='{{templatename}}' data-pluginname = '{{pluginname}}' data-tabname='{{tabname}}' data-status='{{status}}' class="{{class}} more">
                                <i class="{{iconclass}}"></i>{{label}}
                            </a>
                        </div>
                    </li>
                {{/ links}}
                </ul>
            </div>
        </div>
        <div class="userdashboardcontent_container">
            <div>
                <div class='userdashboard_module_content'></div>
            </div>
        </div>
        
    </div>
{{/ desktop_view}}
{{# mobile_view}}
    <div class="dropdown w-100 pull-right userdashboard_m_container text-xs-right">
        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            <i class="icon fa fa-th fa-fw " aria-hidden="true"></i>
            <span class="drop-down-text">{{# str}}elearning, block_userdashboard{{/ str}}</span>
            <span class="caret"></span>
        </button>
        <ul class="userdashboard_mv dropdown-menu pull-right" aria-labelledby="dropdownMenu1">
            {{# links}}
                <li>
                    <div class="dashboard-stat {{active_class}}">
                        <a id="{{id}}" href="javascript:void(0)" class="userdashboard_menu_link dropdown-item" data-value="{{id}}" data-templatename='{{templatename}}' data-pluginname = '{{pluginname}}' data-tabname='{{tabname}}' data-status='{{status}}'>
                            {{label}}
                        </a>
                    </div>
                </li>
            {{/ links}}
        </ul>
        <div class='userdashboard_module_content pull-left col-sm p-0 justify-content-end'></div>
    </div>
{{/ mobile_view}} 

{{#js}}

    $(".userdashboard_mv.dropdown-menu li a").click(function(){
        $(this).parents(".dropdown").find(".drop-down-text").html($(this).text() + " <span class='caret'></span>");
        $(this).parents(".dropdown").find(".drop-down-text").val($(this).data("value"));
        $(".dropdown-menu li a").removeClass("active");
        $(this).addClass("active");
    });
{{/js}}
